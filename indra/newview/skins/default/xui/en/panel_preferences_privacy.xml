<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
    border="true"
    follows="left|top|right|bottom"
    height="408"
    label="Communication"
    layout="topleft"
    left="102"
    name="im"
    top="1"
    width="517">

  <panel.string
      name="log_in_to_change">
    log in to change
  </panel.string>

  <text
   follows="left|top"
   font.style="BOLD"
   height="15"
   layout="topleft"
   left="30"
   length="1"
   name="clearcache_textbox"
   top="10"
   type="string"
   width="400">
    Clear
  </text>
  <check_box
   follows="left|top"
   height="16"
   label="Web Cookies"
   layout="topleft"
   left="60"
   name="clear_web_cookies"
   top_pad="5"
   tool_tip="Clear web browser cookies when the SL cache is cleared"
   width="120">
    <check_box.commit_callback
     function="Clear.SettingsCheck"
     parameter="cookies" />
  </check_box>
  <check_box
   follows="left|top"
   height="16"
   label="Navigation Bar History"
   layout="topleft"
   left_delta="125"
   name="clear_navbar_history"
   tool_tip="Clear navigation bar history when the SL cache is cleared"
   width="120">
    <check_box.commit_callback
     function="Clear.SettingsCheck"
     parameter="navbar" />
  </check_box>
  <check_box
   follows="left|top"
   height="16"
   label="People History"
   layout="topleft"
   left_delta="160"
   name="clear_people_history"
   tool_tip="Clear people history when the SL cache is cleared"
   width="120">
    <check_box.commit_callback
     function="Clear.SettingsCheck"
     parameter="people" />
  </check_box>
  <check_box
   follows="left|top"
   height="16"
   label="Search History"
   layout="topleft"
   left="60"
   name="clear_search_history"
   tool_tip="Clear search history when the SL cache is cleared"
   width="120">
    <check_box.commit_callback
     function="Clear.SettingsCheck"
     parameter="search" />
  </check_box>
  <check_box
   follows="left|top"
   height="16"
   label="Teleport History"
   layout="topleft"
   left_delta="125"
   name="clear_teleport_history"
   tool_tip="Clear teleport history when the SL cache is cleared"
   width="120">
    <check_box.commit_callback
     function="Clear.SettingsCheck"
     parameter="teleport" />
  </check_box>
  <button
      follows="left|top"
      height="23"
      label="Clear History"
      tool_tip="Clear login image, last location, teleport history, web, and texture cache"
      layout="topleft"
      left="60"
      name="clear_cache"
      top_pad="5"
      width="145">
    <button.commit_callback
        function="Pref.WebClearCache" />
  </button>

  <text
    follows="left|top"
    font.style="BOLD"
    height="15"
    layout="topleft"
    left="30"
    length="1"
    name="privacy_textbox"
    top_pad="20"
    type="string"
    width="400">
     Privacy
   </text>
  <check_box
      height="16"
      enabled="false"
      label="Show me in Search results"
      layout="topleft"
      left_delta="30"
      name="online_searchresults"
      top_pad="5"
      width="350" />

  <check_box
      height="16"
      enabled="false"
      label="Only friends and groups know I'm online"
      layout="topleft"
      name="online_visibility"
      top_pad="5"
      width="350" />
    
  <check_box
      control_name="VoiceCallsFriendsOnly"
      height="16"
      label="Only friends and groups can call or IM me"
      layout="topleft"
      name="voice_call_friends_only_check"
      top_pad="6"
      width="350" />

    <check_box
     enabled_control="EnableVoiceChat"
     control_name="AutoDisengageMic"
     height="16"
     label="Switch off microphone when ending calls"
     layout="topleft"
     name="auto_disengage_mic_check"
     top_pad="5"
     width="350" />

    <button
     follows="left|bottom"
     height="23"
     label="Block list"
     layout="topleft"
     name="block_list"
     top_pad="5"
     width="145">
        <!--<button.commit_callback
         function="SideTray.ShowPanel"-->
      <button.commit_callback
         function="Pref.BlockList"/>
    </button>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left_pad="10"
     mouse_opaque="false"
     name="block_list_label"
     top_delta="5"
     text_color="LtGray_50"
     width="300">
       (People and/or Objects you have blocked)
    </text>
    </panel>
