<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Communication"
 layout="topleft"
 left="102"
 name="im"
 top="1"
 width="517">
    <panel.string
     name="log_in_to_change">
        log in to change
    </panel.string>
   <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="clearcache_textbox"
     top="10"
     width="400">
      Clear:
    </text>
    <check_box
     height="16"
     follows="left|top"
     label="Web Cookies"
     layout="topleft"
     left_delta="30"
     name="clear_web_cookies"
     tool_tip="Clear web browser cookies when the SL cache is cleared"
     width="280"
     top_pad="5">
      <check_box.commit_callback
       function="Clear.SettingsCheck"
       parameter="cookies" />
    </check_box>
    <check_box
     follows="left|top"
     height="16"
     label="Navigation Bar History"
     layout="topleft"
     name="clear_navbar_history"
     tool_tip="Clear navigation bar history when the SL cache is cleared"
     width="242">
      <check_box.commit_callback
       function="Clear.SettingsCheck"
       parameter="navbar" />
    </check_box>
    <check_box
     follows="left|top"
     height="16"
     label="Search History"
     layout="topleft"
     name="clear_search_history"
     tool_tip="Clear search history when the SL cache is cleared"
     width="242">
      <check_box.commit_callback
       function="Clear.SettingsCheck"
       parameter="search" />
    </check_box>
    <check_box
     follows="left|top"
     height="16"
     label="Teleport History"
     layout="topleft"
     name="clear_teleport_history"
     tool_tip="Clear teleport history when the SL cache is cleared"
     width="242">
      <check_box.commit_callback
       function="Clear.SettingsCheck"
       parameter="teleport" />
    </check_box>
    <button
     follows="left|top"
     height="23"
     label="Clear History"
     tool_tip="Clear login image, last location, teleport history, web, and texture cache"
     layout="topleft"
     left="60"
     name="clear_cache"
     width="145">
        <button.commit_callback
         function="Pref.WebClearCache" />
    </button>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left_pad="10"
     mouse_opaque="false"
     name="cache_size_label_l"
     top_delta="6"
     text_color="LtGray_50"
     width="300">
       (Locations, images, web, search history)
    </text>

   <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="privacy_textbox"
     top_pad="15"
     width="400">
      Privacy:
    </text>
    <check_box
     follows="left|top"
	 height="16"
	 enabled="false"
     label="Only friends and groups know I'm online"
     layout="topleft"
     left_delta="30"
     name="online_visibility"
     width="350"
     top_pad="5"/>
    <check_box
     enabled_control="EnableVoiceChat"
     control_name="VoiceCallsFriendsOnly"
     height="16"
     label="Only friends and groups can call or IM me"
     layout="topleft"
     name="voice_call_friends_only_check"
     width="350" />
    <check_box
     enabled_control="EnableVoiceChat"
     control_name="AutoDisengageMic"
     height="16"
     label="Switch off microphone when ending calls"
     layout="topleft"
     name="auto_disengage_mic_check"
     width="350" />
    <button
     follows="left|top"
     height="23"
     label="Block list"
     layout="topleft"
     left="60"
     name="block_list"
     width="145">
      <button.commit_callback
         function="Pref.BlockList"/>
    </button>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left_pad="10"
     mouse_opaque="false"
     name="cache_size_label_l"
     top_delta="6"
     text_color="LtGray_50"
     width="300">
       (People and/or Objects you have blocked)
    </text>

	 <text
      type="string"
    length="1"
    follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     mouse_opaque="false"
     name="Logs:"
     top_pad="15"
     width="350">
        Chat Logs:
    </text>
    <check_box
     follows="left|top"
	 enabled="false"
     control_name="LogNearbyChat"
     height="16"
     label="Save nearby chat logs on my computer"
     layout="topleft"
     left_delta="30"
     name="log_nearby_chat"
     width="350"
     top_pad="5">
    </check_box>
    <check_box
	 enabled="false"
     control_name="LogInstantMessages"
     height="16"
     label="Save IM logs on my computer"
     layout="topleft"
     name="log_instant_messages"
     width="350">
    </check_box>
    <check_box
     control_name="LogTimestamp"
	 enabled="false"
     height="16"
     label="Add timestamp to each line in chat log"
     layout="topleft"
     name="show_timestamps_check_im"
     width="237" />
	<check_box
     control_name="LogFileNamewithDate"
     enabled="false"
     height="16"
     label="Add datestamp to log file name."
     layout="topleft"
     name="logfile_name_datestamp"
     width="350"/>
	<text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left_delta="0"
     mouse_opaque="false"
     name="log_path_desc"
     top_pad="5"
     width="128">
        Location of logs:
    </text>    
    <line_editor
     bottom="366"
     control_name="InstantMessageLogPath"
     follows="top|left|right"
     halign="right"
     height="23"
     layout="topleft"
     left_delta="0"
     mouse_opaque="false"
     name="log_path_string"
     top_pad="5"
     width="250"/>
    <button
	 enabled="false"
     follows="right|bottom"
     height="23"
     label="Browse"
     label_selected="Browse"
     layout="topleft"
     left_pad="5"
     name="log_path_button"
     top_delta="0"
     width="145">
        <button.commit_callback
         function="Pref.LogPath" />
    </button>
</panel>
