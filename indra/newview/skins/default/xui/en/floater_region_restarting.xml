<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 bg_alpha_image="Window_Green_Background"
 bg_opaque_image="Window_Green_Background"
 can_minimise="false"
 height="180"
 width="330"
 layout="topleft"
 name="region_restarting"
 single_instance="true"
 reuse_instance="false"
 title="">
    <string name="RestartSeconds">[MINUTES]m [SECONDS]s</string>
    <string name="GreenBG">Window_Green_Background</string>
    <string name="RedBG">Window_Red_Background</string>
    <panel
     name="layout_panel_1"
     height="150"
     right="-4"
     follows="right|top"
     top="0"
     left="1">
    <icon color="1.0 1.0 1.0 0.8"
     tab_stop="false"
     mouse_opaque="false"
     name="icon"
     width="32"
     height="32"
     left="30"
     top="4"
     image_name="Warning_Yellow"
     follows="left|top">
    </icon>
    <text
     type="string"
     length="1"
     follows="top|left"
     font="DejaVu"
     text_color="White"
     layout="topleft"
     name="region_name"
     word_wrap="true"
     height="50"
     top="14"
     left="75" 
     right="-15">
    This region is about to restart..
    </text>
    <panel
     background_visible="true"
     bg_opaque_color="DkGray_66"
     bg_alpha_color="DkGray_66"
     height="41"
     top="50"
     left="0"
     width="328">

    <text
     type="string"
     length="1"
     left="50"
     follows="top|left"
     layout="topleft"
     name="restart_seconds"
     font="DejaVu"
     right="-50"
     text_color="White"
     top="8"
     font.style="BOLD"
     font.size="Huge"
     height="35"
     halign="center">
     13m 02s
    </text>
    </panel>
    <text
     type="string"
     length="1"
     follows="top|left"
     font="DejaVu"
     text_color="White"
     layout="topleft"
     name="region_name"
     word_wrap="true"
     height="40"
     top_pad="14"
     left="30"
     right="-15">
..you will be logged out if you remain here.
    </text>
    <combo_box
     allow_text_entry="true"
     follows="top|right"
     height="23"
     label="My Landmarks"
     layout="topleft"
     top_delta="24"
     left="30"
     max_chars="64"
     name="landmark combo"
     right="-50"
     tool_tip="Landmark to show on map"
     width="182">
        <combo_box.item
         label="My Landmarks"
         name="item1"
         value="None" />
    </combo_box>
    <button
     follows="top|left"
     height="23"
     image_overlay="Arrow_Right"
     image_overlay_alignment="center"
     tool_tip="Forward"
     layout="topleft"
     left_pad="1"
     name="teleport_btn"
     top_delta="0"
     width="28" />
  </panel>
</floater>