<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!-- Side tray panel -->
<panel
 background_visible="false"
 default_tab_group="1"
 follows="all"
 height="430"
 label="People"
 layout="topleft"
 left="0"
 min_height="100"
 name="people_panel"
 top="0"
 width="330">
    <string
     name="no_recent_people"
     value="No recent people. Looking for people to hang out with? Try [secondlife:///app/search/people Search] or the [secondlife:///app/worldmap World Map]." />
    <string
     name="no_filtered_recent_people"
     value="Didn't find what you're looking for? Try [secondlife:///app/search/people/[SEARCH_TERM] Search]." />
    <string
     name="no_one_near"
     value="No one nearby. Looking for people to hang out with? Try [secondlife:///app/search/people Search] or the [secondlife:///app/worldmap World Map]." />
    <string
     name="no_one_filtered_near"
     value="Didn't find what you're looking for? Try [secondlife:///app/search/people/[SEARCH_TERM] Search]." />
    <string
     name="no_friends_online"
     value="No friends online" />
    <string
     name="no_friends"
     value="No friends" />
    <string
     name="no_friends_msg">
         Find friends using [secondlife:///app/search/people Search] or right-click on a Resident to add them as a friend.
Looking for people to hang out with? Try the [secondlife:///app/worldmap World Map].
    </string>
    <string
     name="no_filtered_friends_msg">
         Didn't find what you're looking for? Try [secondlife:///app/search/people/[SEARCH_TERM] Search].
    </string>
     <!--
     *WORKAROUND: for group_list.no_items_msg & group_list.no_filtered_items_msg attributes.
     They are not defined as translatable in VLT. See EXT-5931
     -->
    <string
     name="no_filtered_groups_msg"
     value="Didn't find what you're looking for? Try [secondlife:///app/search/groups/[SEARCH_TERM] Search]." />
    <string
     name="no_groups_msg"
     value="Looking for Groups to join? Try [secondlife:///app/search/groups Search]." />
	<string
	 name="MiniMapToolTipMsg"
	 value="[REGION](Double-click to open Map, shift-drag to pan)"/>
	<string
	 name="AltMiniMapToolTipMsg"
	 value="[REGION](Double-click to teleport, shift-drag to pan)"/>
    <filter_editor
     follows="left|top|right"
     height="23"
     layout="topleft"
     left="10"
     label="Filter"
     max_length_chars="300"
     name="filter_input"
     right="-10"
     text_color="Black"
     text_pad_left="10"
     top="0" />
    <tab_container
     bottom="-3"
     follows="all"
     layout="topleft"
     left="3"
     open_tabs_on_drag_and_drop="true"
     name="tabs"
     tab_group="1"
     tab_min_width="76"
     tab_height="25"
     tab_position="top"
     top="27"
     halign="center"
     right="-3">

<!-- ================================= NEARBY tab =========================== -->

        <panel
         bottom="-1"
         follows="all"
         label="NEARBY"
         layout="topleft"
         left="0"
         help_topic="people_nearby_tab"
         name="nearby_panel"
         right="-1"
         top="0">
         <layout_stack
           bottom="-28"
           clip="false"
           follows="all"
           layout="topleft"
           left="0"
           mouse_opaque="false"
           orientation="vertical"
           right="-1"
           top="0">
           <layout_panel
             height="142"
             layout="topleft"
             min_dim="112"
             mouse_opaque="false"
             right="-1"
             user_resize="true"
             visibility_control="NearbyListShowMap">
             <net_map
               bg_color="NetMapBackgroundColor"
               follows="all"
               height="140"
               layout="topleft"
               left="4"
               mouse_opaque="false"
               name="Net Map"
               right="-4"
               top="4" />
           </layout_panel>
           <layout_panel
             height="215"
             layout="topleft"
             min_dim="22"
             mouse_opaque="false"
             right="-1"
             user_resize="true">
             <avatar_list
               allow_select="true"
               follows="all"
               height="215"
               ignore_online_status="true"
               layout="topleft"
               left="0"
               keep_one_selected="false"
               multi_select="true"
               name="avatar_list"
               right="-1"
               show_text_field="true"
               top="0" />
           </layout_panel>
         </layout_stack>
         <panel
          follows="left|right|bottom"
          height="25"
          label="bottom_panel"
          layout="topleft"
          left="1"
          name="nearby_buttons_panel"
          right="-1"
          top="-25">
             <button
              commit_callback.function="People.Gear"
              follows="left|bottom"
              height="25"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="OptionsMenu_Off"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              layout="topleft"
              left="1"
              name="gear_btn"
              tool_tip="Actions on selected person"
              top="0"
              width="31" />
             <menu_button
              follows="left|bottom"
              height="25"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="Conv_toolbar_sort"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              layout="topleft"
              left_pad="2"
              menu_filename="menu_people_nearby_view.xml"
              menu_position="topleft"
              name="nearby_view_btn"
              tool_tip="View/sort options"
              top_delta="0"
              width="31" />
             <button
              follows="left|bottom"
              height="25"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="AddItem_Off"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              layout="topleft"
              left_pad="2"
              name="add_friend_btn"
              tool_tip="Offer friendship to a resident"
              top_delta="0"
              width="31">
                 <commit_callback
                  function="People.AddFriend" />
             </button>
             <button
              follows="left|bottom"
              height="25"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="Parcel_SeeAVsOff_Dark"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              layout="topleft"
              left_pad="2"
              name="blocklist_btn"
              tool_tip="Show blocked Residents / Objects"
              width="31">
               <commit_callback
                function="People.ShowBlockedList" />
             </button>
             <button
              control_name="NearbyListShowMap"
              follows="left|bottom"
              height="25"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="Command_MiniMap_Icon"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              image_bottom_pad="1"
              layout="topleft"
              left_pad="2"
              name="map_toggle_btn"
              toggle="true"
              tool_tip="Toggle the mini map"
              width="31">
             </button>
             <icon
              follows="left|right|bottom"
              height="25"
              image_name="Toolbar_Right_Off"
              layout="topleft"
              left_pad="2"
              name="dummy_icon"
              width="190" />
             <slider
              follows="left|right|bottom"
              layout="topleft"
              left_pad="-185"
              top_pad="-19"
              width="180"
              height="18"
              control_name="NearMeRange"
              label="Range (m) :"
              label_width="65"
              decimal_digits="0"
              initial_value="96"
              increment="16"
              min_val="32"
              max_val="512"
              name="NearMeRange" />
         </panel>
        </panel>

<!-- ================================= FRIENDS tab ========================== -->

        <panel
         bottom="-1"
         follows="all"
         label="FRIENDS"
         layout="topleft"
         left="0"
         help_topic="people_friends_tab"
         name="friends_panel"
         right="-1"
         top="0">
            <accordion
             background_visible="false"
             bottom="-28"
             follows="all"
             layout="topleft"
             left="3"
             name="friends_accordion"
             right="-2"
             top="0">
                <accordion_tab
                 layout="topleft"
                 height="172"
                 min_height="150"
                 name="tab_online"
                 title="Online">
                        <avatar_list
                         allow_select="true"
                         follows="all"
                         height="172"
                         layout="topleft"
                         left="0"
                         multi_select="true"
                         name="avatars_online"
                         show_permissions_granted="hover"
                         show_profile_btn="false"
                         show_speaking_indicator="false"
                         top="0"
                         width="318" />
                </accordion_tab>
                <accordion_tab
                 layout="topleft"
                 height="173"
                 name="tab_all"
                 title="All">
                        <avatar_list
                         allow_select="true"
                         follows="all"
                         height="173"
                         layout="topleft"
                         left="0"
                         multi_select="true"
                         name="avatars_all"
                         show_permissions_granted="hover"
                         show_profile_btn="false"
                         show_speaking_indicator="false"
                         top="0"
                         width="318" />
                </accordion_tab>
              <accordion_tab
               layout="topleft"
               height="173"
               name="tab_suggested_friends"
               title="People you may want to friend">
                <avatar_list
                 ignore_online_status="true"
                 allow_select="true"
                 follows="all"
                 height="173"
                 layout="topleft"
                 left="0"
                 name="suggested_friends"
                 show_permissions_granted="true"
                 top="0"
                 width="307" />
              </accordion_tab>              
            </accordion>
            <text
             follows="all"
             height="450"
             left="13"
             name="no_friends_help_text"
             right="-13"
             top="37"
             wrap="true" />
            <panel
             follows="left|right|bottom"
             height="25"
             label="bottom_panel"
             layout="topleft"
             left="1"
             name="friends_buttons_panel"
             right="-1"
             top="-25">
                <button
                 commit_callback.function="People.Gear"
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="OptionsMenu_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left="1"
                 name="gear_btn"
                 tool_tip="Actions on selected person"
                 top="0"
                 width="31" />
                <menu_button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="Conv_toolbar_sort"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 menu_filename="menu_people_friends_view.xml"
                 menu_position="topleft"
                 name="friends_view_btn"
                 tool_tip="View/sort options"
                 top_delta="0"
                 width="31" />
                <button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="AddItem_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 name="friends_add_btn"
                 tool_tip="Offer friendship to a resident"
                 top_delta="0"
                 width="31">
                    <commit_callback
                     function="People.AddFriendWizard" />
                </button>
                <button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="Parcel_SeeAVsOff_Dark"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 name="blocklist_btn"
                 tool_tip="Show blocked Residents / Objects"
                 top_delta="0"
                 width="31">
                  <commit_callback
                   function="People.ShowBlockedList" />
                </button>
                <icon
                 follows="left|right|bottom"
                 height="25"
                 image_name="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 name="dummy_icon"
                 right="-33"
                 top_delta="0" />
                <dnd_button
                 follows="right|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="TrashItem_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 left_pad="2"
                 layout="topleft"
                 name="friends_del_btn"
                 tool_tip="Remove selected person as a friend"
                 top_delta="0"
                 width="31">
                    <commit_callback
                     function="People.DelFriend" />
                </dnd_button>
            </panel>
        </panel>

<!-- ================================= GROUPS tab =========================== -->

        <panel
         bottom="-1"
         follows="all"
         label="GROUPS"
         layout="topleft"
         left="0"
         help_topic="people_groups_tab"
         name="groups_panel"
         right="-1"
         top="0">
    <!--
     *NOTE: no_groups_msg & group_list attributes are not defined as translatable in VLT. See EXT-5931
     Values are set from appropriate strings at the top of file via LLPeoplePanel::postBuild()
    -->
            <text
                type="string"
                length="1"
                follows="left|top|right"
                height="14"
                layout="topleft"
                right="-7"
                top="6"
                left="7"
                name="groupcount">
              You belong to [COUNT] groups, and can join [REMAINING] more.
            </text>
            <group_list
             allow_select="true" 
             bottom="-28"
             follows="all"
             layout="topleft"
             left="3"
             name="group_list"
             right="-2"
             top="21" />
            <panel
             follows="left|right|bottom"
             height="25"
             label="bottom_panel"
             layout="topleft"
             left="1"
             name="groups_buttons_panel"
             right="-1"
             top="-25">
                <menu_button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="OptionsMenu_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left="1"
                 name="groups_gear_btn"
                 tool_tip="Actions on selected group"
                 top="0"
                 width="31" />
                <menu_button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="Conv_toolbar_sort"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 menu_filename="menu_people_groups_view.xml"
                 menu_position="topleft"
                 name="groups_view_btn"
                 tool_tip="View/sort options"
                 top_delta="0"
                 width="31" />
                <menu_button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="AddItem_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 menu_filename="menu_group_plus.xml"
                 menu_position="topleft"
                 name="plus_btn"
                 tool_tip="Join group/Create new group"
                 top_delta="0"
                 width="31">
                    <validate_callback
                     function="People.Group.Plus.Validate" />
                </menu_button>
                <button
                 follows="left|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="Activate_Checkmark"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 name="activate_btn"
                 tool_tip="Activate selected group"
                 top_delta="0"
                 width="31">
                    <commit_callback
                     function="People.Group.Activate" />
                </button>
                <icon
                 follows="left|right|bottom"
                 height="25"
                 image_name="Toolbar_Middle_Off"
                 layout="topleft"
                 left_pad="2"
                 name="dummy_icon"
                 right="-33"
                 top_delta="0" />
                <grouptitle_combo
                 follows="left|right|bottom"
                 height="23"
                 layout="topleft"
                 left_delta="0"
                 name="active_group_title"
                 right="-33"
                 top_delta="1" />
                <dnd_button
                 follows="right|bottom"
                 height="25"
                 image_hover_unselected="Toolbar_Middle_Over"
                 image_overlay="TrashItem_Off"
                 image_selected="Toolbar_Middle_Selected"
                 image_unselected="Toolbar_Middle_Off"
                 left_pad="2"
                 layout="topleft"
                 name="minus_btn"
                 tool_tip="Leave selected group"
                 top_delta="-1"
                 width="31">
                    <commit_callback
                     function="People.Group.Minus" />
                </dnd_button>
            </panel>
                use_ellipses="true"
        </panel>

<!-- ================================= RECENT tab =========================== -->

        <panel
         bottom="-1"
