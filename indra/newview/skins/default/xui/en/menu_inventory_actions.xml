<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu
 layout="topleft"
 visible="false"
 name="Inventory Actions">
    <menu_item_call
     label="Open"
     layout="topleft"
     name="open">
        <on_click
         function="Inventory.Action"
         parameter="open" />
        <on_visible
         function="Inventory.VisibleAction"
         parameter="open" />         
    </menu_item_call>
    <menu_item_call
     label="Play Inworld"
     layout="topleft"
     name="playworld">
        <on_click
         function="Inventory.Action"
         parameter="playworld" />
        <on_visible
         function="Inventory.VisibleAction"
         parameter="playworld" />
    </menu_item_call>
    <menu_item_call
     label="Play Locally"
     layout="topleft"
     name="playlocal">
        <on_click
         function="Inventory.Action"
         parameter="playlocal" />
        <on_visible
         function="Inventory.VisibleAction"
         parameter="playlocal" />         
    </menu_item_call>
    <menu_item_call
     label="Save As"
     layout="topleft"
     name="save_as">
        <on_click
         function="Inventory.Action"
         parameter="save_as" />
        <on_visible
         function="Inventory.VisibleAction"
         parameter="save_as" />         
    </menu_item_call>
    <menu_item_separator />
    <menu_item_call
     label="Properties"
     layout="topleft"
     name="properties">
        <on_click
         function="Inventory.Action"
         parameter="properties" />
        <on_visible
         function="Inventory.VisibleAction"
         parameter="properties" />         
    </menu_item_call>
</toggleable_menu>
