<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="300"
 layout="topleft"
 name="panel_quickprefs_windlight"
 width="300">
	<string name="WINDLIGHT_REGION">(Region default)</string>
	<string name="WINDLIGHT_DAYCYCLE">(Day cycle)</string>
	<string name="WINDLIGHT_FIXEDSKY">(Fixed sky)</string>

	<check_box
	 height="16"
	 label="Use region settings"
	 layout="topleft"
	 left="10"
	 name="windlight_regiondefault_check"
	 top_pad="2"
	 width="130" />
	<text
	 follows="top|left"
	 height="15"
	 layout="topleft"
	 left="15"
	 name="windlight_daycycle_text"
	 top_pad="6"
	 width="75">
		Day cycle :
	</text>
	<combo_box
	 follows="top|left|right"
	 height="23"
	 name="windlight_daycycle_combo"
	 layout="topleft"
	 left_pad="5"
	 top_delta="-4"
	 width="160">
		<combo_box.item
		 label="-Select a preset-"
		 name="item0"/>
	</combo_box>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Left"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_daycycle_prevbtn"
	 right="-25"
	 top_delta="1"
	 width="18">
	</button>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Right"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_daycycle_nextbtn"
	 right="-5"
	 top_delta="0"
	 width="18">
	</button>
	<text
	 follows="top|left"
	 height="15"
	 layout="topleft"
	 left="15"
	 length="1"
	 name="windlight_fixedsky_text"
	 top_pad="8"
	 type="string"
	 width="75">
		Fixed sky :
	</text>
	<combo_box
	 follows="top|left|right"
	 height="23"
	 layout="topleft"
	 left_pad="5"
	 name="windlight_fixedsky_combo"
	 top_delta="-4"
	 width="160">
		<combo_box.item
		 label="-Select a preset-"
		 name="item0"/>
	</combo_box>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Left"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_fixedsky_prevbtn"
	 right="-25"
	 top_delta="1"
	 width="18">
	</button>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Right"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_fixedsky_nextbtn"
	 right="-5"
	 top_delta="0"
	 width="18">
	</button>
	<text
	 follows="top|left"
	 height="15"
	 layout="topleft"
	 left="15"
	 name="windlight_water_text"
	 top_pad="8"
	 width="75">
		Water :
	</text>
	<combo_box
	 follows="top|left|right"
	 height="23"
	 layout="topleft"
	 left_pad="5"
	 name="windlight_water_combo"
	 top_delta="-4"
	 width="160">
		<combo_box.item
		 label="-Select a preset-"
		 name="item0"/>
	</combo_box>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Left"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_water_prevbtn"
	 right="-25"
	 top_delta="1"
	 width="18">
	</button>
	<button
	 follows="top|right"
	 height="21"
	 image_overlay="Arrow_Right"
	 hover_glow_amount="0.15"
	 layout="topleft"
	 name="windlight_water_nextbtn"
	 right="-5"
	 top_delta="0"
	 width="18">
	</button>
	
	<text
	 follows="top|left"
	 height="15"
	 layout="topleft"
	 left="15"
	 name="windlight_sunmoon_text"
	 top_pad="8"
	 width="125">
		Sun/moon Position :
	</text>
	<check_box
	 height="16"
	 label="Freeze time"
	 layout="topleft"
	 left_pad="8"
	 name="windlight_sunmoon_freeze_check"
	 top_delta="0"
	 width="130" />
	<slider
	 decimal_digits="0"
	 follows="top|left|right"
	 height="10"
	 increment="0.0833333"
	 initial_value="0"
	 layout="topleft"
	 left="15"
	 max_val="24"
	 name="windlight_sunmoon_position"
	 show_text="false"
	 top_pad="5"
	 width="260" />
	<text
	 type="string"
	 length="1"
	 border_visible="true"
	 follows="left|top|right"
	 font="SansSerif"
	 height="14"
	 layout="topleft"
	 left_delta="2"
	 name="WL12amHash"
	 top_pad="6"
	 width="6">
		|
	</text>
	<text
	 type="string"
	 length="1"
	 border_visible="true"
	 follows="left|top|right"
	 font="SansSerif"
	 height="14"
	 layout="topleft"
	 left_pad="57"
	 name="WL6amHash"
	 top_delta="0"
	 width="6">
		|
	</text>
	<text
	 type="string"
	 length="1"
	 border_visible="true"
	 follows="left|top|right"
	 font="SansSerif"
