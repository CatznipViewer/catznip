<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="300"
 layout="topleft"
 name="panel_quickprefs_windlight"
 width="300">
  <string name="WINDLIGHT_SHARED">(Shared environment)</string>
  <string name="WINDLIGHT_DAYCYCLE">(None: Day cycle)</string>
  <string name="WINDLIGHT_FIXEDSKY">(None: Fixed sky)</string>
  <string name="WINDLIGHT_PARCEL">(Shared: Parcel)</string>
  <string name="WINDLIGHT_REGION">(Shared: Region)</string>
  <string name="WINDLIGHT_CUSTOM">(Custom)</string>

  <button
   follows="top|right"
   height="21"
   label="Use Shared Environment"
   layout="topleft"
   left="17"
   name="windlight_usesharedenv_btn"
   top_pad="2"
   width="150"
   />
  <button
   follows="top|right"
   height="21"
   label="Personal Lighting..."
   layout="topleft"
   left_pad="10"
   name="windlight_personaledit_btn"
   top_delta="0"
   width="115"
   />

  <view_border
   bevel_style="none"
   height="0"
   layout="topleft"
   left="15"
   name="windlight_border_0"
   top_pad="7"
   right="-5"
   />

  <text
   follows="top|left"
   halign="right"
   height="15"
   layout="topleft"
   left="15"
   name="windlight_daycycle_text"
   top_pad="10"
   width="40">
    Day :
  </text>
  <combo_box
   follows="top|left|right"
   height="23"
   name="windlight_daycycle_combo"
   layout="topleft"
   left_pad="10"
   top_delta="-4"
   width="170">
    <combo_box.item
     label="-Select a preset-"
     name="item0"/>
  </combo_box>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Left"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_daycycle_prevbtn"
   right="-45"
   tool_tip="Change to the previous day cycle"
   top_delta="1"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Right"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_daycycle_nextbtn"
   right="-25"
   tool_tip="Change to the next day cycle"
   top_delta="0"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Edit_Wrench"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_daycycle_editbtn"
   right="-5"
   tool_tip="Edit the current day cycle"
   top_delta="0"
   width="20">
  </button>

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="65"
   name="windlight_dayoffset_text"
   text_readonly_color="LabelDisabledColor"
   top_pad="5"
   width="50">
      Position :
  </text>
  <slider
   decimal_digits="1"
   follows="top|left"
   height="10"
   increment="0.5"
   initial_value="0.0"
   layout="topleft"
   left_pad="5"
   min_val="0"
   max_val="99.9"
   name="windlight_dayoffset_slider"
   right="-5"
   text_suffix="%"
   text_width="37"
   top_delta="3"
   />

  <check_box
   height="16"
   label="Freeze time"
   layout="topleft"
   left="65"
   name="windlight_freezetime_check"
   right="-5"
   top_pad="6"
   />

  <text
   follows="top|left"
   halign="right"
   height="15"
   layout="topleft"
   left="15"
   length="1"
   name="windlight_fixedsky_text"
   top_pad="10"
   type="string"
   width="40">
    Sky :
  </text>
  <combo_box
   follows="top|left|right"
   height="23"
   layout="topleft"
   left_pad="10"
   name="windlight_fixedsky_combo"
   top_delta="-4"
   width="170">
    <combo_box.item
     label="-Select a preset-"
     name="item0"/>
  </combo_box>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Left"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_fixedsky_prevbtn"
   right="-45"
   tool_tip="Change to the previous sky preset"
   top_delta="1"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Right"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_fixedsky_nextbtn"
   right="-25"
   tool_tip="Change to the next sky preset"
   top_delta="0"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Edit_Wrench"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_fixedsky_editbtn"
   right="-5"
   tool_tip="Edit the current sky preset"
   top_delta="0"
   width="20">
  </button>

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="65"
   name="windlight_skygamma_text"
   top_pad="7"
   width="50">
      Gamma :
  </text>
  <slider
   decimal_digits="2"
   follows="top|left|right"
   height="10"
   increment="0.01"
   initial_value="2.0"
   layout="topleft"
   left_pad="5"
   min_value="-1"
   max_val="10"
   name="windlight_skygamma_slider"
   right="-5"
   text_width="32"
   top_delta="3"
   />

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="65"
   name="windlight_celestialbody_text"
   top_pad="7"
   width="50">
      Adjust :
  </text>
  <radio_group
   follows="top|left"
   height="20"
   layout="topleft"
   left_pad="3"
   name="windlight_celestialbody_group"
   right="-5"
   top_pad="-13"
   value="0">
     <radio_item
      label="Sun"
      left="0"
      name="windlight_celestialbody_sun"
      layout="topleft"
      value="0"
      width="85"
      />
     <radio_item
      label="Moon"
      left_pad="0"
      layout="topleft"
      name="windlight_celestialbody_moon"
      value="1"
      width="75"
      />
  </radio_group>

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="65"
   name="windlight_azimuth_text"
   top_pad="-3"
   width="50">
      Azimuth :
  </text>
  <slider
   decimal_digits="1"
   follows="top|left|right"
   height="10"
   increment="0.5"
   initial_value="0.0"
   layout="topleft"
   left_pad="5"
   min_val="0"
   max_val="360"
   name="windlight_azimuth_slider"
   right="-5"
   text_suffix="°"
   text_width="32"
   top_delta="3"
   />

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="65"
   name="windlight_elevation_text"
   top_pad="7"
   width="50">
      Elevation :
  </text>
  <slider
   decimal_digits="1"
   follows="top|left|right"
   height="10"
   increment="0.5"
   initial_value="0.0"
   layout="topleft"
   left_pad="5"
   min_val="-90"
   max_val="90"
   name="windlight_elevation_slider"
   right="-5"
   text_suffix="°"
   text_width="32"
   top_delta="3"
   />

  <view_border
   bevel_style="none"
   follows="top|left|right"
   height="0"
   layout="topleft"
   left="65"
   name="windlight_border_2"
   top_pad="7"
   right="-5"
   />

  <text
   follows="top|left"
   height="15"
   layout="topleft"
   left="15"
   name="windlight_water_text"
   top_pad="10"
   width="40">
    Water :
  </text>
  <combo_box
   follows="top|left|right"
   height="23"
   layout="topleft"
   left_pad="10"
   name="windlight_water_combo"
   top_delta="-4"
   width="170">
    <combo_box.item
     label="-Select a preset-"
     name="item0"
     />
  </combo_box>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Left"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_water_prevbtn"
   right="-45"
   tool_tip="Change to the previous water preset"
   top_delta="1"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Arrow_Right"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_water_nextbtn"
   right="-25"
   tool_tip="Change to the next water preset"
   top_delta="0"
   width="18">
  </button>
  <button
   follows="top|right"
   height="21"
   image_overlay="Edit_Wrench"
   hover_glow_amount="0.15"
   layout="topleft"
   name="windlight_water_editbtn"
   right="-5"
   tool_tip="Edit the current water preset"
   top_delta="0"
   width="20">
  </button>

  <view_border
   bevel_style="none"
   height="0"
   layout="topleft"
   left="15"
   name="windlight_border_3"
   top_pad="7"
   right="-5"
   />

  <check_box
   control_name="EnvironmentPersistAcrossLogin"
   height="16"
   label="Reapply current Windlight at logon"
   layout="topleft"
   left="10"
   name="windlight_prefs_persist"
   top_pad="8"
   width="130"
   />
  <check_box
   control_name="EnvironmentInterpolatePresetChanges"
   height="16"
   label="Interpolate preset changes"
   layout="topleft"
   left="10"
   name="windlight_prefs_interpolate"
   top_pad="2"
   width="130"
   />

</panel>
