<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_minimize="true"
 can_resize="true"
 can_close="true"
 height="250"
 layout="topleft"
 legacy_header_height="18"
 min_height="200"
 min_width="300"
 name="NewGroupNotice"
 open_positioning="centered"
 save_rect="true"
 save_visibility="false"
 title="New Group Notice"
 width="400">
    <panel
     follows="all"
     height="230"
     layout="topleft"
     left="5"
     name="panel_create_new_notice"
     right="-5"
     top="20"
     visible="true">
        <group_drop_target
         height="230"
         layout="topleft"
         left="5"
         name="drop_target"
         right="-5"
         tool_tip="Drag an inventory item onto this target box to send it with this notice. You must have permission to copy and transfer the item in order to attach it."
         top="0" />

        <icon
         follows="top|left"
         height="18"
         image_name="Snapshot_Email"
         layout="topleft"
         left="5"
         mouse_opaque="true"
         name="header_icon"
         top="5"
         width="18" />
        <text
         follows="top|left|right"
         font="SansSerifLargeBold"
         height="20"
         layout="topleft"
         left_pad="8"
         length="1"
         name="header_text"
         plain_text="true"
         right="-5"
         text_color="white"
         type="string"
         top_delta="1">
            [GROUP]
        </text>

        <view_border 
         bevel_style="in"
         follows="left|top|right" 
         height="1"
         layout="topleft"
         left="5"
         name="hr"
         right="-5"
         top_pad="0"
         />

        <text
         type="string"
         length="1"
         top_pad="10"
         follows="top|left"
         font="SansSerif"
         height="16"
         layout="topleft"
         left="5"
         name="subject_label"
         width="65">
            Subject:
        </text>
        <line_editor
         follows="left|top|right"
         height="20"
         label="Type your subject here."
         layout="topleft"
         left_pad="0"
         max_length_bytes="63"
         name="subject_editor"
         prevalidate_callback="ascii"
         right="-5"
         top_delta="-3" />
        <text
         type="string"
         length="1"
         top_pad="10"
         follows="top|left"
         font="SansSerif"
         layout="topleft"
         left="5"
         name="message_label"
         width="65">
            Message:
        </text>
        <text_editor
         type="string"
         length="1"
         follows="all"
         height="90"
         layout="topleft"
         left_pad="0"
         max_length="511"
         name="message_editor"
         right="-5"
         top_delta="-2"
         word_wrap="true">
            Type your message here.
        </text_editor>
        <text
         type="string"
         length="1"
         top_pad="10"
         follows="bottom|left"
         font="SansSerif"
         height="16"
         layout="topleft"
         left="5"
         name="attach_label"
         width="65">
            Attach:
        </text>
        <line_editor
         enabled="false"
         follows="bottom|left|right"
         halign="center"
         height="20"
         label="Drag and drop inventory item here"
         layout="topleft"
         left_pad="0"
         max_length_bytes="90"
         name="attach_editor"
         right="-5"
         text_color="EmphasisColor"
         text_pad_left="25"
         text_pad_right="23"
         text_tentative_color="EmphasisColor"
         top_delta="-3" />
        <icon
         enabled="false"
         follows="bottom|left"
         height="15"
         layout="topleft"
         left="75"
         mouse_opaque="true"
         name="attach_icon"
         top_delta="2"
         width="15" />
        <button
         follows="bottom|right"
         height="13"
         image_unselected="Icon_Close_Toast"
         image_selected="Icon_Close_Toast"
         layout="topleft"
         name="attach_clear_btn"
         right="-10"
         top_delta="1"
         width="13" />

        <layout_stack
         follows="bottom|left|right"
         height="23"
         left="5"
         mouse_opaque="false"
         name="button_stack"
         orientation="horizontal"
         right="-5"
         top_pad="13">
            <layout_panel
             auto_resize="true"
             height="23"
             name="button_spacer_left"
             width="80" />
            <layout_panel
             auto_resize="false"
             height="23"
             name="button_spacer_left"
             width="220">
                <button
                 follows="bottom|left"
                 height="23"
                 label="Send"
                 layout="topleft"
                 name="send_btn"
                 top="0"
                 width="100">
                </button>
                <button
                 follows="bottom|left"
                 height="23"
                 label="Cancel"
                 left_pad="20"
                 layout="topleft"
                 name="cancel_btn"
                 top_delta="0"
                 width="100">
                </button>
            </layout_panel>
            <layout_panel
             auto_resize="true"
             height="23"
             name="button_spacer_right"
             width="80" />
        </layout_stack>
    </panel>
</floater>
