<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_resize="true"
 default_tab_group="1"
 height="355"
 layout="topleft"
 min_height="200"
 min_width="230"
 name="preview notecard"
 help_topic="preview_notecard"
 save_rect="true"
 title="NOTECARD:"
 width="400">
    <floater.string
     name="no_object">
        Unable to find object containing this notecard.
    </floater.string>
    <floater.string
     name="not_allowed">
        You do not have permission to view this notecard.
    </floater.string>
    <floater.string
     name="Title">
        Notecard: [NAME]
    </floater.string>
    <icon
     follows="top|right"
     height="18"
     image_name="Lock"
     layout="topleft"
     left="322"
     mouse_opaque="true"
     name="lock"
     top="4"
     width="18" />
    <text
     type="string"
     length="1"
     follows="left|top"
     height="19"
     layout="topleft"
     left="10"
     name="desc txt"
     top="19"
     width="80">
        Description
    </text>
    <line_editor
     border_style="line"
     border_thickness="0"
     follows="left|top|right"
     height="17"
     layout="topleft"
     left_pad="0"
     max_length_bytes="127"
     name="desc"
     right="-5"
     top_delta="0"/>
    <text_editor
     type="string"
     length="1"
     embedded_items="true"
     follows="left|top|right|bottom"
     height="280"
     ignore_tab="false"
     layout="topleft"
     left="7"
     max_length="65536"
     name="Notecard Editor"
     parse_urls="false" 
     spellcheck="true"
     tab_group="1"
     top="39"
     right="-7"
     word_wrap="true">
        Loading...
    </text_editor>

    <panel
     background_visible="false"
     follows="left|right|bottom"
     height="25"
     label="bottom_panel"
     layout="topleft"
     left="5"
     name="bottom_panel"
     top_pad="5" >
        <icon  
         follows="bottom|left|right"
         height="25"
         image_name="Toolbar_Left_Off"
         right="-200"
         layout="topleft"
         left="0"
         name="spacer_icon_1"
         top="0" />

        <button
         follows="bottom|right"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="Command_Inventory_Icon"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="Save"
         layout="topleft"
         left_pad="1"
         name="Save"
         width="80" />


        <icon  
         follows="bottom|right"
         height="25"
         image_name="Toolbar_Middle_Off"
         width="18"
         layout="topleft"
         left_pad="1"
         name="spacer_icon_2"
         top="0" />


        <button
         follows="bottom|right"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="StopReload_Off"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="Delete"
         layout="topleft"
         left_pad="1"
         name="Delete"
         width="80" />

        <icon  
         follows="bottom|right"
         height="25"
         image_name="Toolbar_Right_Off"
         right="-1"
         layout="topleft"
         left_pad="1"
         left="-18"
         name="spacer_icon_3"
         top="0" />
    </panel>
</floater>
