<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
        border="true"
        border_margin_horz="3"
        follows="all"
        height="320"
        label="Water"
        layout="topleft"
        left="0"
        help_topic="land_general_tab"
        name="panel_settings_water"
        top="0"
        width="505">
    <layout_stack name="water_stack1"
            follows="all"
            layout="topleft"
            left="1"
            top="1"
            right="-1"
            bottom="-1"
            border_size="0"
            orientation="vertical">
        <layout_panel
                border="false"
                bevel_style="in"
                auto_resize="false"
                user_resize="false"
                visible="true"
                height="162">
          <layout_stack name="water_stack2"
           left="1"
           top="1"
           right="-1"
           bottom="-1"
           follows="left|top|right|bottom"
           orientation="horizontal">
            <layout_panel
             border="false"
             bevel_style="in"
             auto_resize="true"
             user_resize="false"
             visible="true"
             width="50">
          <text
                    follows="left|top"
                    height="20"
                    font="SansSerifBold"
                    font.size="Large"
                    layout="topleft"
                    left="8"
                    top="2"
                    width="135">
                Water Fog
            </text>
            <text
                    follows="right|top"
                    height="10"
                    layout="topleft"
                    right="-60"
                    top="8"
                    width="40">
                Color:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="right|top"
                    height="24"
                    label_height="0"
                    layout="topleft"
                    left_pad="0"
                    name="water_fog_color"
                    top_delta="-5"
                    width="48" />
            <text
                    follows="left|top"
                    height="10"
                    top="24"
                    left="8"
                    width="150">
                Density Exponent:
            </text>
            <slider
                    decimal_digits="1"
                    follows="top|left|right"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="top"
                    left_delta="5"
                    min_val="-10"
                    max_val="10"
                    name="water_fog_density"
                    top_pad="5"
                    right="-15"
                    text_width="35"
                    can_edit_text="true"/>
            <text
                    follows="left|top"
                    height="10"
                    top_pad="3"
                    left_delta="-5"
                    width="150">
                Underwater Modifier:</text>
            <slider
                    decimal_digits="2"
                    follows="top|left|right"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="top"
                    left_delta="5"
                    min_val="0.0"
                    max_val="20.0"
                    name="water_underwater_mod"
                    top_pad="5"
                    right="-15"
                    text_width="35"
                    can_edit_text="true"/>
                    
                    <text
                            follows="left|top|right"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_pad="3"
                            width="150">
                        Fresnel Scale:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="top|left|right"
                            height="16"
                            increment="0.01"
                            initial_value="0.7"
                            layout="topleft"
                            left_delta="5"
                            name="water_fresnel_scale"
                            top_pad="5"
                            right="-15"
                            text_width="35"
                            can_edit_text="true"/>
                    <text
                            follows="left|top|right"
                            layout="topleft"
                            left_delta="-5"
                            name="FresnelOffsetText"
                            top_pad="3"
                            width="150">
                        Fresnel Offset:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="top|left|right"
                            increment="0.01"
                            initial_value="0.7"
                            height="16"
                            layout="topleft"
                            left_delta="5"
                            name="water_fresnel_offset"
                            top_pad="5"
                            right="-15"
                            text_width="35"
                            can_edit_text="true"/>
                    <view_border
                     top="1"
                     right="-1"
                     bottom="-1"
                     width="1"
                     follows="top|bottom|right"
                     bevel_style="none"
                     border_thickness="1"
                     mouse_opaque="false"
                     name="divisor1"/>
            </layout_panel>
            <layout_panel
             border="false"
             bevel_style="in"
             auto_resize="true"
             user_resize="false"
             width="50"
             visible="true">
                    <text
                            follows="left|top"
                            height="20"
                            font="SansSerifBold"
                            font.size="Large"
                            layout="topleft"
                            left="8"
                            top="2"
                            width="215">
                        Refraction and Blur
                    </text>
                    <text
                            follows="left|top|right"
                            height="10"
                            layout="topleft"
                            top_pad="2"
                            left_delta="0"
                            width="215">
                        Refraction Scale (Above)
                    </text>
                    <slider
                            control_name="water_scale_above"
                            decimal_digits="2"
                            follows="top|left|right"
                            increment="0.01"
                            initial_value="0.1"
                            height="16"
                            layout="topleft"
                            left_delta="5"
                            min_val="0"
                            max_val="3"
                            name="water_scale_above"
                            top_pad="5"
                            right="-15"
                            text_width="40"
                            can_edit_text="true" />
                    <text
                            type="string"
                            length="1"
                            follows="left|top|right"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_pad="3"
                            width="215">
                        Refraction Scale (Below)
                    </text>
                    <slider
                            control_name="water_scale_below"
                            decimal_digits="2"
                            follows="top|left|right"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="0"
                            max_val="3"
                            name="water_scale_below"
                            top_pad="5"
                            right="-15"
                            text_width="40"
                            can_edit_text="true"/>
                    <text
                            follows="left|top|right"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_pad="3"
                            width="215">
                        Blur Multiplier
                    </text>
                    <slider
                            control_name="water_blur_multip"
                            follows="top|left|right"
                            height="16"
                            increment="0.001"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="-0.5"
                            max_val="0.5"
                            name="water_blur_multip"
                            top_pad="5"
                            right="-15"
                            text_width="40"
                            can_edit_text="true"/>
            </layout_panel>
          </layout_stack>
                    
        </layout_panel>
        <layout_panel
                border="true"
                auto_resize="true"
                user_resize="false"
                visible="true">
                    <text
                            follows="left|top|right"
                            height="16"
                            layout="topleft"
                            left="10"
                            top="5"
                            width="215">
                        Normal Map
                    </text>
                    <texture_picker
                            height="71"
                            layout="topleft"
                            left_delta="0"
                            name="water_normal_map"
                            top_pad="0"
                            width="48"/>

                    <text
                            follows="right|top"
                            height="16"
                            width="120"
                            layout="topleft"
                            top="5"
                            right="-135">
                        Large Wave Speed
                    </text>
                    <xy_vector
                        follows="top|right"
                        name="water_wave1_xy"
                        width="112"
                        height="130"
                        visible="true"
                        left_delta="0"
                        top_pad="0"
                        min_val_x="-20"
                        max_val_x="20"
                        increment_x="0.01f"
                        min_val_y="-20"
                        max_val_y="20"
                        increment_y="0.01f"
                        arrow_color="white"/>
                    
                    <text
                            follows="right|top"
                            height="16"
                            layout="topleft"
                            top="5"
                            left_delta="130">
                        Small Wave Speed
                    </text>
                    <xy_vector
                        follows="top|right"
                        name="water_wave2_xy"
                        width="112"
                        height="130"
                        visible="true"
                        left_delta="0"
                        top_pad="0"
                        min_val_x="-20"
                        max_val_x="20"
                        min_val_y="-20"
                        max_val_y="20" 
                        increment_x="0.01f"
                        increment_y="0.01f"
                        arrow_color="white"/>

                    <text
                            follows="left|top|right"
                            height="16"
                            layout="topleft"
                            left="10"
                            top="75"
                            width="215">
                        Reflection Wavelet Scale
                    </text>
                    <slider
                            decimal_digits="1"
                            follows="left|top"
                            increment="0.01"
                            height="16"
                            initial_value="0.7"
                            layout="topleft"
                            label="X:"
                            left_delta="10"
                            max_val="10"
                            name="water_normal_scale_x"
                            top_pad="2"
                            width="200"
                            can_edit_text="true"/>
                    <slider
                            decimal_digits="1"
                            follows="left|top"
                            increment="0.01"
                            initial_value="0.7"
                            height="16"
                            layout="topleft"
                            max_val="10"
                            name="water_normal_scale_y"
                            top_pad="5"
                            label="Y:"
                            width="200"
                            can_edit_text="true"/>
                    <slider
                            decimal_digits="1"
                            follows="left|top"
                            increment="0.01"
                            initial_value="0.7"
                            height="16"
                            layout="topleft"
                            max_val="10"
                            name="water_normal_scale_z"
                            top_pad="5"
                            label="Z:"
                            width="200"
                            can_edit_text="true"/>                            
                        
        </layout_panel>
    </layout_stack>
</panel>     
