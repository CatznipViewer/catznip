<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<context_menu
 layout="topleft"
 name="IMChiclet P2P Menu">
    <menu_item_call
     label="View Profile"
     layout="topleft"
     name="Show Profile">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="profile" />
    </menu_item_call>
    <menu_item_call
     label="Offer Teleport"
     layout="topleft"
     name="Offer Teleport">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="teleport_offer" />
        <menu_item_call.on_enable
         function="IMChicletMenu.EnableAction"
         parameter="can_teleport" />
    </menu_item_call>
    <menu_item_call
     label="Request Teleport"
     layout="topleft"
     name="Request Teleport">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="teleport_request" />
        <menu_item_call.on_enable
         function="IMChicletMenu.EnableAction"
         parameter="can_teleport" />
    </menu_item_call>
    <menu_item_call
     label="Pay"
     layout="topleft"
     name="Pay">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="pay" />
    </menu_item_call>
    <menu_item_call
     label="Add Friend"
     layout="topleft"
     name="Add Friend">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="friend_add" />
        <menu_item_call.on_visible
         function="IMChicletMenu.EnableAction"
         parameter="can_friend_add" />
    </menu_item_call>
    <menu_item_separator
     layout="topleft" />
    <menu_item_call
     label="Show Session"
     layout="topleft"
     name="Send IM">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="session_show" />
    </menu_item_call>
    <menu_item_call
     label="End Session"
     layout="topleft"
     name="End Session">
        <menu_item_call.on_click
         function="IMChicletMenu.Action"
         parameter="session_end" />
    </menu_item_call>
</context_menu>
