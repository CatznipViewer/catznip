<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu
 layout="topleft"
 visible="false"
 name="Gear Outfits View">
    <menu_item_call
     label="Close All Folders"
     layout="topleft"
     name="close_folders">
        <on_click
         function="OutfitsView.Gear.CloseFolders" />
    </menu_item_call>

    <menu_item_separator
     layout="topleft" />

    <menu_item_call
     label="Wear - Replace Current Outfit"
     layout="topleft"
     name="wear">
        <on_click
         function="OutfitsView.Gear.Wear" />
        <on_enable
         function="OutfitsView.Gear.OnEnable"
         parameter="wear" />
        <on_visible
         function="OutfitsView.Gear.OnVisible"
         parameter="wear" />
    </menu_item_call>
    <menu_item_call
     label="Wear - Add to Current Outfit"
     layout="topleft"
     name="wear_add">
        <on_click
         function="OutfitsView.Gear.WearAdd" />
        <on_enable
         function="OutfitsView.Gear.OnEnable"
         parameter="wear_add" />
        <on_visible
         function="OutfitsView.Gear.OnVisible"
         parameter="wear_add" />
    </menu_item_call>
    <menu_item_call
     label="Take Off - Remove from Current Outfit"
     layout="topleft"
     name="take_off">
        <on_click
         function="OutfitsView.Gear.TakeOff" />
        <on_enable
         function="OutfitsView.Gear.OnEnable"
         parameter="take_off" />
        <on_visible
         function="OutfitsView.Gear.OnVisible"
         parameter="take_off" />
    </menu_item_call>

    <menu_item_separator
     layout="topleft" />

    <menu_item_call
     label="Rename Outfit"
     layout="topleft"
     name="rename_outfit">
        <on_click
         function="OutfitsView.Gear.OnAction"
         parameter="rename_outfit" />
        <on_enable
         function="OutfitsView.Gear.OnEnable"
         parameter="rename_outfit" />
        <on_visible
         function="OutfitsView.Gear.OnVisible"
         parameter="rename_outfit" />
    </menu_item_call>
    <menu_item_call
     label="Delete Outfit"
     layout="topleft"
     name="delete_outfit">
        <on_click
         function="OutfitsView.Gear.OnAction"
         parameter="delete_outfit" />
        <on_enable
         function="OutfitsView.Gear.OnEnable"
         parameter="delete_outfit" />
        <on_visible
         function="OutfitsView.Gear.OnVisible"
         parameter="delete_outfit" />
    </menu_item_call>
</toggleable_menu>
