<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Crash Reports"
 layout="topleft"
 left="102"
 name="crash_reports"
 top="1"
 width="517">
    <check_box
     layout="topleft"
     enabled="false"
     follows="top|left"
     height="16"
     label="Send crash reports to catznip.com"
     left="30"
     name="checkSendCrashReports"
     parse_urls="false"
     top="30"
     width="250"
    />

    <text
     follows="top|left"
     height="10"
     layout="topleft"
     label="Logs:"
     left="80"
     mouse_opaque="false"
     name="textSaveMiniDumpType"
     top_pad="15"
     type="string"
     width="90"
    >
      Minidump Type :
    </text>
    <combo_box
     control_name="SaveMinidumpType"
     enabled="false"
     follows="top|left"
     height="23"
     layout="topleft"
     left_pad="10"
     name="comboSaveMiniDumpType"
     top_pad="-15"
     width="125"
    >
        <combo_box.item
         label="Minimal"
         value="0" />
        <combo_box.item
         label="Default"
         value="1" />
        <combo_box.item
         label="Extended"
         value="2" />
    </combo_box>

	<check_box
     enabled="false"
     follows="top|left"
     height="16"
     label="Always ask before sending"
     layout="topleft"
     left="60"
     name="checkSendCrashReportsAlwaysAsk"
     top_pad="7"
     width="250"
    />

    <check_box
     enabled="false"
     follows="top|left"
     height="16"
     label="Include settings.xml"
     layout="topleft"
     name="checkSendSettings"
     top_pad="5"
     width="130"
    />

    <check_box
	 enabled="false"
	 follows="top|left"
     height="16"
     label="Include Second Life name"
     layout="topleft"
     left="60"
     name="checkSendName"
	 top_pad="0"
     width="160"
    />
    <text
     follows="left|top"
     height="20"
     layout="topleft"
     left_delta="20" 
     name="textSendName"
     text_color="White_25"
     top_pad="5" 
     width="275"
    >
      (used to ask for additional information if needed)
    </text>

	<text
     layout="topleft"
     follows="top|left"
     left="30"

     type="string"
     length="1"
     height="10"
     mouse_opaque="false"
     name="textInformation1"
     top_pad="30"
     width="475"
    >
        Unless checked above crash reports only contain information relevant to the crash.
    </text>
	<text
     follows="top|left"
     height="10"
     layout="topleft"
     left="30"
     length="1"
     mouse_opaque="false"
     name="textInformation2"
     type="string"
     width="475"
    >
        Second Life logs are not sent, please review the contents and email separately
    </text>
	<text
     layout="topleft"
     follows="top|left"
     left="30"
     type="string"
     length="1"
     height="10"
     mouse_opaque="false"
     name="textInformation3"
     width="475"
    >
        if you feel they might contain additional information.
    </text>

	<text
     layout="topleft"
     follows="top|left"
     left="30"
     type="string"
     length="1"
     height="10"
     mouse_opaque="false"
     name="textInformation4"
     top_pad="20"
     width="350"
     font.style="BOLD"
    >
        Privacy policy: http://catznip.com/privacy/
    </text>

</panel>
