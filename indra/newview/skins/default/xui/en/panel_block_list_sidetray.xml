<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="300"
 label="BLOCKED LIST"
 layout="topleft"
 top="0"
 width="350" >
    <scroll_list
     draw_border="false"
     draw_heading="true"
     draw_stripes="true"
     follows="all"
     height="275"
     layout="topleft"
     multi_select="false"
     name="mute_list"
     tool_tip="List of currently blocked Residents / Objects."
     top="0" >
        <scroll_list.columns
         label="Name"
         name="item_name" />
        <scroll_list.columns
         label="Block Type"
         name="item_type"
         width="100" />
    </scroll_list>
    <panel
     background_visible="false"
     follows="left|right|bottom"
     height="25"
     label="bottom_panel"
     layout="topleft"
     name="bottom_panel"
     top_pad="0" >
        <button 
         follows="left|bottom"
         height="25"
         image_hover_unselected="Toolbar_Left_Over"
         image_overlay="AddItem_Off"
         image_overlay_alignment="left"
         image_selected="Toolbar_Left_Selected"
         image_unselected="Toolbar_Left_Off"
         label="Block Resident"
         left="1"
         name="mute_resident_btn"
         tool_tip="Pick a resident to block"
         top="0"
         width="119">
            <button.commit_callback
             function="Block.ClickPick" />
        </button>
        <button 
         follows="left|bottom"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="AddItem_Off"
         image_overlay_alignment="left"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         label="Block Object"
         left_pad="1"
         name="mute_object_btn"
         tool_tip="Pick an object to block by name"
         width="109">
            <button.commit_callback
             function="Block.ClickBlockByName" />
        </button>
        <icon  
         follows="left|bottom|right"
         height="25"
         image_name="Toolbar_Middle_Off"
         width="39"
         left_pad="1"
         name="derenderx_spacer_icon" />
        <button 
         enabled="false"
         follows="bottom|right"
         height="25"
         image_hover_unselected="Toolbar_Right_Over"
         image_overlay="TrashItem_Off"
         image_overlay_alignment="left"
         image_selected="Toolbar_Right_Selected"
         image_unselected="Toolbar_Right_Off"
         label="Unblock"
         left_pad="1"
         name="mute_trash_btn"
         tool_tip="Remove selected items from the blocked list"
         width="79">
            <button.commit_callback
             function="Block.ClickRemove" />
        </button>
    </panel>
</panel>
