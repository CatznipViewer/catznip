<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_minimize="false"
 can_resize="true"
 height="330"
 layout="topleft"
 min_height="330"
 min_width="400"
 name="offer_invfolder_browse"
 positioning="centered"
 title="PICK: FOLDER"
 width="400">
    <filter_editor
     follows="left|top|right"
     height="23"
     label="Filter Inventory"
     layout="topleft"
     left="10"
     name="inv_filter_editor"
     right="-10"
     top="5" />
    <inventory_panel
     allow_multi_select="false"
     bg_visible="true"
     bg_alpha_color="DkGray2"
     border="false"
     follows="all"
     height="265"
     layout="topleft"
     left="10"
     name="inv_panel"
     right="-10"
     show_items="false"
     top_pad="4" />

    <button
     follows="bottom|left"
     height="23"
     label="Select"
     layout="topleft"
     left="10"
     name="btn_select"
     top_pad="3"
     width="100" />
    <button
     follows="bottom|left"
     height="23"
     label="Cancel"
     layout="topleft"
     left_pad="5"
     name="btn_cancel"
     top_delta="0"
     width="100" />
    <button
     follows="bottom|left"
     height="23"
     label="Close All Folders"
     layout="topleft"
     right="-10"
     name="btn_closeall"
     top_delta="0"
     width="100" />
</floater>
