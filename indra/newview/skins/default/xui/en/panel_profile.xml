            </expandable_text>
          </panel>
        </scroll_container>
      </layout_panel>
        <layout_panel
         follows="bottom|left"
         height="30"
         layout="topleft"
         name="profile_buttons_panel"
         top="0"
         auto_resize="false"
         width="317">

            <button
             follows="bottom|left"
             height="23"
             label="IM"
             layout="topleft"
             left="1"
             name="im"
             tool_tip="Open instant message session"
             width="34">
                <button.commit_callback
                 function="Profile.IM" />
            </button>
            <button
             follows="bottom|left"
             height="23"
             label="Call"
             layout="topleft"
             left_pad="3"
             name="call"
             tool_tip="Call this Resident"
             use_ellipses="true"
             width="60">
                <button.commit_callback
                 function="Profile.Call" />
            </button>
            <button
             follows="bottom|left"
             height="23"
             label="Teleport"
             layout="topleft"
             left_pad="3"
             name="teleport"
             tool_tip="Offer teleport"
             use_ellipses="true"
             width="85">
                <button.commit_callback
                 function="Profile.OfferTeleport" />
            </button>
            <button
             follows="bottom|left"
             height="23"
             label="Pay"
             layout="topleft"
             left_pad="3"
             mouse_opaque="false"
             name="pay"
             width="60">
                <button.commit_callback
                 function="Profile.Pay" />
            </button>
            <button
             follows="bottom|left"
             height="23"
             image_overlay="Command_Profile_Icon"
             layout="topleft"
             left_pad="3"
             name="webprofile"
             tool_tip="View the resident's web profile"
             width="31">
                <button.commit_callback
                 function="Profile.ShowWebProfile" />
            </button>
            <menu_button
             follows="bottom|left"
             height="23"
             image_overlay="OptionsMenu_Off"
             menu_filename="menu_profile_overflow.xml"
             menu_position="bottomleft"
             layout="topleft"
             left_pad="3"
             name="gear_btn"
             tool_tip="Actions on selected person"
             width="31" />

        </layout_panel>
    </layout_stack>

</panel>
