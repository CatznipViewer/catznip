<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="376"
 label="Instant Message"
 layout="topleft"
 name="chat_im"
 width="509">
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_appearance_text"
     font.style="BOLD">
        Instant Message / Group Chat Appearance
    </text>
    <text
     follows="top|left"
     height="20"
     layout="topleft"
     left="35"
     name="im_orientation_text"
     width="110">
        Tab orientation :
    </text>
    <radio_group
     control_name="IMUseVerticalTabs"
     height="20"
     layout="topleft"
     left_pad="0"
     name="im_orientation_radio"
     top_delta="-7"
     width="221">
        <radio_item
         height="19"
         label="Horizontal"
         layout="topleft"
         name="im_orientation_horz"
         value="0"
         width="150" />
        <radio_item
         height="19"
         label="Vertical"
         layout="topleft"
         left_pad="-16"
         name="im_orientation_vert"
         value="1"
         width="150" />
    </radio_group>
    <check_box
     control_name="RearrangeIMTabs"
     follows="top|left"
     height="20"
     label="Drag-rearrange IM tabs"
     layout="topleft"
     left="35"
     name="im_rearrange_check"
     width="350" />
    <check_box
     control_name="IMShowTabImage"
     follows="top|left"
     height="20"
     label="Show profile icons on tabs"
     layout="topleft"
     left="35"
     name="im_showimage_check"
     width="350" />
    
    <view_border
     top_pad="10"
     layout="topleft"
     left="10"
     height="0"
     right="-10"
     follows="left|top"
     bevel_style="none"
     border_thickness="1"
     mouse_opaque="false"
     name="divisor1" />
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_behaviour_text"
     font.style="BOLD">
        Instant Message / Group Chat Behavior
    </text>
    <check_box
     control_name="CloseIMOnEmptyReturn"
     follows="top|left"
     height="20"
     label="Entering a blank line in closes the active conversation floater"
     layout="topleft"
     left="35"
     name="im_closeonreturn_check"
     width="350" />

    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left="35"
     mouse_opaque="false"
     name="im_embedoffer_text"
     top_pad="7"
     type="string"
     width="140">
        Embed agent offers in IM :
    </text>
    <combo_box
     allow_text_entry="false"
     bottom_delta="3"
     control_name="NotificationCanEmbedInIM"
     follows="top|left"
     height="23"
     layout="topleft"
     left_pad="10"
     mouse_opaque="true"
     name="im_embedoffer_combo"
     width="100">
        <combo_box.item
         label="Always"
         value="0" />
        <combo_box.item
         label="When Focused"
         value="1" />
        <combo_box.item
         label="Never"
         value="2" />
    </combo_box>

    <view_border
     top_pad="10"
     layout="topleft"
     left="10"
     height="0"
     right="-10"
     follows="left|top"
     bevel_style="none"
     border_thickness="1"
     mouse_opaque="false"
     name="divisor1" />
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_notifications_text"
     font.style="BOLD">
        Notifications
    </text>
    
    
    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="friend_ims"
     width="105">
        Friend IMs:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="friend_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="friend_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="friend_ims_pop"
     left_pad="7"
     width="100">
    </check_box>


    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="non_friend_ims"
     width="105">
        Non-friend IMs:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="non_friend_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="non_friend_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="non_friend_ims_pop"
     left_pad="7"
     width="100">
    </check_box>



    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="conference_ims"
     width="105">
         Conference IMs:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="conference_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="conference_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="conference_ims_pop"
     left_pad="7"
     width="100">
    </check_box>


    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="group_chat"
     width="105">
        Group chat:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="group_chat_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="group_chat_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="group_chat_ims_pop"
     left_pad="7"
     width="100">
    </check_box>


    
    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="object_ims"
     width="105">
        Object IMs:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="object_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="object_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="object_chat_ims_pop"
     left_pad="7"
     width="100">
    </check_box>

 
    <text
     follows="top|left"
     layout="topleft"
     height="16"
     left="35"
     name="attached_object_ims"
     width="105">
        Worn Object IMs:
    </text>
    <check_box
     height="20"
     label="Show Toasts"
     layout="topleft"
     name="attached_object_ims_toasts"
     left_pad="0"
     top_delta="-3"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Flash Button"
     layout="topleft"
     name="attached_object_ims_flashbuttons"
     left_pad="7"
     width="100">
    </check_box>
    <check_box
     height="23"
     label="Show Conversations"
     layout="topleft"
     name="attached_object_chat_ims_pop"
     left_pad="7"
     width="100">
    </check_box>
</panel>
