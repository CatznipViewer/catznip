<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="376"
 label="Instant Message"
 layout="topleft"
 name="chat_im"
 width="509">
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_appearance_text"
     font.style="BOLD">
        Instant Message / Group Chat Appearance
    </text>
    <text
     follows="top|left"
     height="20"
     layout="topleft"
     left="35"
     name="im_orientation_text"
     width="110">
        Tab orientation :
    </text>
    <radio_group
     control_name="IMUseVerticalTabs"
     height="20"
     layout="topleft"
     left_pad="0"
     name="im_orientation_radio"
     top_delta="-7"
     width="221">
        <radio_item
         height="19"
         label="Horizontal"
         layout="topleft"
         name="im_orientation_horz"
         value="0"
         width="150" />
        <radio_item
         height="19"
         label="Vertical"
         layout="topleft"
         left_pad="-16"
         name="im_orientation_vert"
         value="1"
         width="150" />
    </radio_group>
    <check_box
     control_name="RearrangeIMTabs"
     follows="top|left"
     height="20"
     label="Drag-rearrange IM tabs"
     layout="topleft"
     left="35"
     name="im_rearrange_check"
     width="350" />
    <check_box
     control_name="IMShowTabImage"
     follows="top|left"
     height="20"
     label="Show profile icons on tabs"
     layout="topleft"
     left="35"
     name="im_showimage_check"
     width="350" />
    
    <view_border
     top_pad="10"
     layout="topleft"
     left="10"
     height="0"
     right="-10"
     follows="left|top"
     bevel_style="none"
     border_thickness="1"
     mouse_opaque="false"
     name="divisor1" />
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_behaviour_text"
     font.style="BOLD">
        Instant Message / Group Chat Behavior
    </text>
    <check_box
     control_name="CloseIMOnEmptyReturn"
     follows="top|left"
     height="20"
     label="Entering a blank line in closes the active conversation floater"
     layout="topleft"
     left="35"
     name="im_closeonreturn_check"
     width="350" />

    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left="35"
     mouse_opaque="false"
     name="im_embedoffer_text"
     top_pad="7"
     type="string"
     width="140">
        Embed agent offers in IM :
    </text>
    <combo_box
     allow_text_entry="false"
     bottom_delta="3"
     control_name="NotificationCanEmbedInIM"
     follows="top|left"
     height="23"
     layout="topleft"
     left_pad="10"
     mouse_opaque="true"
     name="im_embedoffer_combo"
     width="100">
        <combo_box.item
         label="Always"
         value="0" />
        <combo_box.item
         label="When Focused"
         value="1" />
        <combo_box.item
         label="Never"
         value="2" />
    </combo_box>

    <view_border
     top_pad="10"
     layout="topleft"
     left="10"
     height="0"
     right="-10"
     follows="left|top"
     bevel_style="none"
     border_thickness="1"
     mouse_opaque="false"
     name="divisor1" />
    <text
     layout="topleft"
     follows="top|left"
     top_pad="15"
     left="20"
     width="350"
     height="15"
     mouse_opaque="false"
     type="string"
     name="im_notifications_text"
     font.style="BOLD">
        Chat toast visibility
    </text>
    
    <text
     follows="top|left"
     height="16"
     layout="topleft"
     left="35"
     name="im_notif_p2p_text"
     top_pad="11"
     width="110">
      Instant messages :
    </text>
    <combo_box
     control_name="NotificationIMP2PToast"
     height="23"
     layout="topleft"
     left_pad="5"
     name="im_notif_p2p_toastoptions"
     top_delta="-5"
     width="175">
        <item
         label="Friends and non-friends"
         value="0" />
        <item
         label="Only friends"
         value="1" />
        <item
         label="Only non-friends"
         value="2" />
        <item
         label="Never"
         value="3" />
    </combo_box>
    <check_box
     control_name="NotificationIMP2PFlash"
     height="23"
     label="Flash toolbar button"
     left_pad="15"
     layout="topleft"
     name="im_notif_p2p_flashtoolbar"
     top_delta="-2"
     width="120" />

    <text
     follows="top|left"
     height="16"
     layout="topleft"
     left="35"
     name="im_notif_multi_text"
     top_pad="10"
     width="110">
      Multi-person :
    </text>
    <combo_box
     control_name="NotificationIMMultiToast"
     height="23"
     layout="topleft"
     left_pad="5"
     name="im_notif_multi_toastoptions"
     top_delta="-5"
     width="175">
        <item
         label="Groups and conferences"
         value="0" />
        <item
         label="Only groups"
         value="1" />
        <item
         label="Only conferences"
         value="2" />
        <item
         label="Never"
         value="3" />
    </combo_box>
    <check_box
     control_name="NotificationIMMultiFlash"
     height="23"
     label="Flash toolbar button"
     left_pad="15"
     layout="topleft"
     name="im_notif_multi_flashtoolbar"
     top_delta="-3"
     width="120" />

    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left="35"
     mouse_opaque="false"
     name="im_notif_toastalign_text"
     top_pad="20"
     type="string"
     width="110">
        Toast location :
    </text>
    <combo_box
     allow_text_entry="false"
     bottom_delta="3"
     control_name="NotificationToastAlignment"
     follows="top|left"
     height="23"
     layout="topleft"
     left_pad="5"
     mouse_opaque="true"
     name="im_notif_toastalign_options"
     width="110">
        <combo_box.item
         label="Top right"
         value="0" />
        <combo_box.item
         label="Bottom right"
         value="1" />
    </combo_box>
    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left="35"
     mouse_opaque="false"
     name="im_notif_chicletalign_text"
     top_pad="8"
     type="string"
     width="110">
        Chiclet location :
    </text>
    <combo_box
     allow_text_entry="false"
     bottom_delta="3"
     control_name="ChicletBarAlignment"
     follows="top|left"
     height="23"
     layout="topleft"
     left_pad="5"
     mouse_opaque="true"
     name="im_notif_chicletalign_options"
     width="110">
        <combo_box.item
         label="Top right"
         value="0" />
        <combo_box.item
         label="Bottom right"
         value="1" />
    </combo_box>
</panel>
