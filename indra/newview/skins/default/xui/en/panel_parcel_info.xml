<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_visible="false"
 follows="all"
 height="370"
 layout="topleft"
 min_height="350"
 name="panel_parcel_info"
 width="300">
  <!-- Parcel numbers text -->
  <string
   name="area_traffic_text">
      Area: [AREA]m² - Traffic: [TRAFFIC]
  </string>
  <string
   name="area_sale_text">
      Area: [AREA]m² - For sale: [PRICE]
  </string>


	  <!-- Currently set to 4:3 -->
      <texture_picker
       enabled="false"
       fallback_image="default_land_picture.j2c"
       height="195"
       layout="topleft"
       left="10"
       name="parcel_snapshot"
	   show_label="false"
       top="0"
       width="280" />

      <text
       follows="top|left"
       font="SansSerifLarge"
       height="14"
       layout="topleft"
       left="10"
       name="parcel_name"
       text_color="white"
       top="200"
       use_ellipses="true"
       value="Parcel name goes here"
       width="280" />
      <icon
       follows="top|left"
       height="16"
       image_name="transparent.j2c"
       layout="topleft"
       left="10"
       name="region_maturity"
       top_pad="7"
       width="18" />
      <text
       follows="top|left"
       height="14"
       layout="topleft"
       left_pad="5"
       name="parcel_location"
       top_delta="3"
       use_ellipses="true"
       value="Region (128, 128, 20)"
       width="257" />
      <text
       follows="top|left"
       height="15"
       layout="topleft"
       left="10"
       name="parcel_numbers"
       top_pad="5"
       value="Area: 4096m² - For sale: L$5,000,000"
       width="280" />
      <text_editor
       bg_readonly_color="Transparent"
       enabled="false" 
       follows="top|bottom"
       height="105"
       max_length="65536"
       left="10"
       text_color="LtGray"
       name="parcel_description"
       top_pad="5"
       width="280"
       word_wrap="true">
