<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_resize="true"
 height="290"
 layout="topleft"
 min_height="290"
 min_width="280"
 name="floater_buy_contents"
 help_topic="floater_buy_contents"
 save_rect="true"
 title="BUY CONTENTS"
 width="280">
    <floater.string
     name="no_copy_text">
        (no copy)
    </floater.string>
    <floater.string
     name="no_modify_text">
        (no modify)
    </floater.string>
    <floater.string
     name="no_transfer_text">
        (no transfer)
    </floater.string>
       <text
     type="string"
     length="1"
     follows="left|top|right"
     height="16"
     top="22"
     left="10"
     layout="topleft"
     name="contains_text"
     width="276">
        &lt;nolink&gt;[NAME]&lt;/nolink&gt; contains:
    </text>
    <scroll_list
     background_visible="true"
     draw_border="false"
     follows="all"
     height="150"
     layout="topleft"
     left="10"
     name="item_list"
     top_pad="4"
     width="260">
        <scroll_list.columns
         name="icon"
         width="16" />
        <scroll_list.columns
         name="text"
         relative_width="1" />
    </scroll_list>
    <text
     type="string"
     length="1"
     follows="left|right|bottom"
     height="16"
     layout="topleft"
     left="10"
     name="buy_text"
     text_color="White"
     top_pad="5"
     use_ellipses="true" 
     width="260">
        Buy for L$[AMOUNT] from [NAME]?
    </text>
    <check_box
     follows="left|bottom"
     height="16"
     label="Wear clothing &amp; attachments now"
     layout="topleft"
     left="10"
     name="wear_check"
     width="250" />
    <check_box
     value="true"
     follows="left|bottom"
     height="16"
     label="Open in inventory"
     layout="topleft"
     left="10"
     name="showinv_check"
     width="250" />
    <panel
     background_visible="false"
     follows="left|right|bottom"
     height="25"
     label="bottom_panel"
     layout="topleft"
     left="5"
     name="bottom_panel"
     top_pad="5" >
        <icon  
         follows="bottom|left"
         height="25"
         image_name="Toolbar_Left_Off"
         width="42"
         layout="topleft"
         left="0"
         name="spacer_icon_1"
         top="0" />

        <button
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="Shop"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="Buy"
         layout="topleft"
         left_pad="1"
         name="buy_btn"
         width="80" />


        <icon  
         follows="bottom|left"
         height="25"
         image_name="Toolbar_Middle_Off"
         width="20"
         layout="topleft"
         left_pad="1"
         name="spacer_icon_2"
         top="0" />


        <button
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="StopReload_Off"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="Cancel"
         layout="topleft"
         left_pad="1"
         name="cancel_btn"
         width="80" />

        <icon  
         follows="bottom|right|left"
         height="25"
         image_name="Toolbar_Right_Off"
         width="42"
         layout="topleft"
         left_pad="1"
         left="226"
         name="spacer_icon_3"
         top="0" />
    </panel>
    
    
    
</floater>
