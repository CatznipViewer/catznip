<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_resize="true"
 height="280"
 layout="topleft"
 min_height="200"
 min_width="405"
 name="preview_texture"
 help_topic="preview_texture"
 width="405">
   <floater.string
     name="Title">
        Texture: [NAME]
    </floater.string>
    <floater.string
     name="Copy">
        Copy To Inventory
    </floater.string>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="19"
     layout="topleft"
     left="10"
     name="desc txt"
     top="23"
     width="90">
        Description:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     follows="left|top|right"
     font="SansSerif"
     height="19"
     layout="topleft"
     left_pad="0"
     max_length_bytes="127"
     name="desc"
     top_delta="-2" 
     width="100" />
    <text
     type="string"
     length="1"
     follows="top|right"
     font="SansSerif"
     height="19"
     layout="topleft"
     left_pad="10"
     name="aspect_ratio"
     top="23"
     width="75">
        Aspect ratio:
    </text>
    <combo_box
     allow_text_entry="true" 
     border_style="line"
     border_thickness="1"
     enabled="true"
     follows="top|right" 
     height="19"
     left_pad="10"
     max_chars="20"
     mouse_opaque="true"
     name="combo_aspect_ratio"
     top_delta="-3" 
     tool_tip="Preview at a fixed aspect ratio"
     width="108">
    	<combo_item name="Unconstrained" value="Unconstrained">
    		Unconstrained
    	</combo_item>
    	<combo_item name="1:1" value="1:1">
    		1:1
    	</combo_item>
    	<combo_item name="4:3" value="4:3">
    		4:3
    	</combo_item>
    	<combo_item name="5:4" value="5:4">
    		5:4
    	</combo_item>
    	<combo_item name="16:9" value="16:9">
    		16:9
    	</combo_item>
    	<combo_item name="16:10" value="16:10">
    		16:10
		</combo_item>
    	<combo_item name="2:1" value="2:1">
    		2:1
    	</combo_item>
    	<combo_item name="3:2" value="3:2">
    		3:2
    	</combo_item>
    	<combo_item name="10:7" value="10:7">
    		10:7
    	</combo_item>
	</combo_box>
    <view
     follows="all"
     height="200"
     layout="topleft"
     left="10"
     name="texture_placeholder"
     right="-10"
     top_pad="5" />
    <text
     type="string"
     halign="left"
     length="1"
     follows="left|bottom"
     height="16"
     layout="topleft"
     left="10"
     name="dimensions"
     top="255"
     width="135">
        [WIDTH]px x [HEIGHT]px
    </text>
    <button
     follows="right|bottom"
     height="22"
     label="OK"
     layout="topleft"
     left_pad="-30"
     name="Keep"
     top="250"
     width="90" />
    <button
     follows="right|bottom"
     height="22"
     label="Discard"
     layout="topleft"
     left_pad="5"
     name="Discard"
     top_delta="0"
     width="90" />
    <button
     follows="right|bottom"
     height="22"
     label="Save As"
     layout="topleft"
     left_pad="5"
     name="save_tex_btn"
     top_delta="0"
     width="90" />
</floater>
