<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_resize="true"
 height="280"
 layout="topleft"
 min_height="200"
 min_width="405"
 name="preview_texture"
 help_topic="preview_texture"
 width="405">
   <floater.string
     name="Title">
        Texture: [NAME]
    </floater.string>
    <floater.string
     name="Copy">
        Copy To Inventory
    </floater.string>
    <panel
     follows="top|left|right"
     height="22"
     layout="topleft"
     left="1"
     name="panel_top"
     top="22"
     visible="true"
     right="-1">
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="19"
     layout="topleft"
     left="10"
     name="desc txt"
     top="3"
     width="90">
        Description:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     follows="left|top|right"
     font="SansSerif"
     height="19"
     layout="topleft"
     left_pad="0"
     max_length_bytes="127"
     name="desc"
     top_delta="-2" 
     width="100" />
    <text
     type="string"
     length="1"
     follows="top|right"
     font="SansSerif"
     height="19"
     layout="topleft"
     left_pad="10"
     name="aspect_ratio"
     top="3"
     width="75">
        Aspect ratio:
    </text>
    <combo_box
     allow_text_entry="true" 
     border_style="line"
     border_thickness="1"
     enabled="true"
     follows="top|right" 
     height="19"
     left_pad="10"
     max_chars="20"
     mouse_opaque="true"
     name="combo_aspect_ratio"
     top_delta="-3" 
     tool_tip="Preview at a fixed aspect ratio"
     width="103">
	</combo_box>
	</panel>
    <view
     follows="all"
     height="202"
     layout="topleft"
     left="10"
     name="texture_placeholder"
     right="-10"
     top_pad="3" />
    <panel
     follows="bottom|left|right"
     height="22"
     layout="topleft"
     left="1"
     name="panel_bottom"
     bottom="-5"
     visible="true"
     right="-1">
    <text
     type="string"
     halign="left"
     length="1"
     follows="left|bottom"
     height="16"
     layout="topleft"
     left="10"
     name="dimensions"
     top="5"
     width="135">
        [WIDTH]px x [HEIGHT]px
    </text>
    <button
     follows="right|bottom"
     height="22"
     label="OK"
     layout="topleft"
     left_pad="-30"
     name="Keep"
     top="0"
     width="85" />
    <button
     follows="right|bottom"
     height="22"
     label="Discard"
     layout="topleft"
     left_pad="5"
     name="Discard"
     top_delta="0"
     width="85" />
    <flyout_button
     follows="right|bottom"
     height="22"
     label="Save As"
     layout="topleft"
     left_pad="5"
     name="save_tex_btn"
     top_delta="0"
     width="105">
      <flyout_button.item
       label="Save as PNG"
       name="save_tex_png"
       value="save_tex_png" />
      <flyout_button.item
       label="Save as TGA"
       name="save_tex_tga"
       value="save_tex_tga" />
      <flyout_button.item
       label="Save as BMP"
       name="save_tex_bmp"
       value="save_tex_bmp" />
    </flyout_button> />
	</panel>
</floater>
