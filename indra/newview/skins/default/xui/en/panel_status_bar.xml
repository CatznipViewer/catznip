<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="true"
 background_visible="true"
 bg_opaque_color="DkGray"
 chrome="true"
 follows="top|right"
 height="19"
 layout="topleft"
 left="0"
 mouse_opaque="false"
 name="status"
 top="19"
 tab_stop="false"
 width="1000">
    <panel.string
     name="packet_loss_tooltip">
        Packet Loss
    </panel.string>
    <panel.string
     name="bandwidth_tooltip">
        Bandwidth
    </panel.string>
    <panel.string
     name="time">
        [hour12, datetime, slt]:[min, datetime, slt] [ampm, datetime, slt] [timezone,datetime, slt]
    </panel.string>
    <panel.string
     name="timeTooltip">
        [weekday, datetime, slt], [day, datetime, slt] [month, datetime, slt] [year, datetime, slt]
    </panel.string>
	<panel.string
     name="buycurrencylabel">
        L$ [AMT]
    </panel.string>
  <panel
    class="topinfo_bar"
    filename="panel_topinfo_bar.xml"
    follows="top|left|right"
    height="18"
    layout="topleft"
    left="425"
    name="topinfo_bar"
    top="1"
    width="250" />
  <layout_stack
   animate="false" 
   layout="topleft"
   orientation="horizontal"
   height="18"
   left="-390"
   width="390"
   right_pad="0"
   top="1"
   follows="right|top" 
   name="status_panel">
    <layout_panel
     auto_resize="true"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="overflow_panel"
     width="1" />
    <layout_panel
     auto_resize="false"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="balance_panel"
     width="110">
<!--
  <panel
    height="18"
    left="-395"
    width="185"
    top="1"
    follows="right|top" 
    name="balance_bg">
-->
    <text
     halign="center"
     font="SansSerifSmall"
     follows="all"
     height="18"
     left="0" 
     name="balance"
     tool_tip="Click to refresh your L$ balance"
     top="0"
     valign="center"     
     wrap="false" 
     value="L$ -1" 
     width="110" />
    </layout_panel>
    <layout_panel
     auto_resize="false"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="buyL_panel"
     width="65">
    <button
     halign="center"
     font="SansSerifSmall"
     follows="right|top|bottom"
     image_hover_unselected="PushButton_Over"
     image_unselected="PushButton_Off"
     image_pressed="PushButton_Press"
     height="18"
     label="Buy L$"
     label_color="White"
     left="0"
     label_shadow="true"
     name="buyL"
     pad_right="0"
     tool_tip="Click to buy more L$"
     top="0"
     width="65" />
    </layout_panel>
    <layout_panel
     auto_resize="false"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="shop_panel"
     width="65">
    <button
     halign="left"
     font="SansSerifSmall"
     follows="right|top|bottom"
     imgoverlay_label_space="7"
     image_overlay="Command_MiniCart_Icon"
     image_overlay_alignment="left"
     image_hover_unselected="PushButton_Over"
     image_unselected="PushButton_Off"
     image_pressed="PushButton_Press"
     height="18"
     label="Shop"
     label_color="White"
     left="0"
     label_shadow="true"
     name="goShop"
     tool_tip="Open Second Life Marketplace"
     top="0"
     width="65" />
    </layout_panel>
<!--
  </panel>
-->
    <layout_panel
     auto_resize="false"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="time_panel"
     width="142">
    <text
     type="string"
     font="SansSerifSmall"
     text_readonly_color="TimeTextColor"
     follows="right|top"
     halign="center"
     height="18"
     top="0"
     layout="topleft"
     left="0"
     name="TimeText"
     tool_tip="Current time (Pacific)"
     valign="center"     
     width="100">
        24:00 AM PST
    </text>
    <button
     follows="right|top"
     height="16"
     image_selected="Play_Off"
     image_unselected="Pause_Off"
     image_pressed="Pause_Press"
     image_pressed_selected="Play_Press"
     is_toggle="true"
     left_pad="0"
     top="1"
     name="media_toggle_btn"
     tool_tip="Start/Stop All Media (Music, Video, Web pages)"
     width="16" >
    </button>
    <button
     follows="right|top"
     height="16"
     image_selected="AudioMute_Off"
     image_pressed="Audio_Press"
     image_unselected="Audio_Off"
     is_toggle="true"
     left_pad="5"
     right_pad="5"
     top="2"
     name="volume_btn"
     width="16" />
    </layout_panel>
    <layout_panel
     auto_resize="false"
     user_resize="false"
     follows="top|right"
     height="18"
     visible="true"
     layout="topleft"
     name="netstats_panel"
     width="16" />
  </layout_stack>
</panel>
