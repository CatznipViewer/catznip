<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  positioning="cascading"
  can_resize="true"
  height="220"
  help_topic="avatarpicker"
  layout="topleft"
  min_height="220"
  min_width="280"
  name="avatarpicker"
  title="CHOOSE RESIDENT"
  width="280">
    <floater.string name="not_found">&apos;[TEXT]&apos; not found</floater.string>
    <floater.string name="no_one_near">No one near</floater.string>
    <floater.string name="no_results">No results</floater.string>
    <floater.string name="searching">Searching...</floater.string>
    <floater.string
     name="not_found_text">
        Resident wasn't found.
    </floater.string>
    <!-- For multiple person selection, use "Select" and "Close" 
      instead of "OK" and "Cancel" because "Cancel" still keeps the ones 
      you have already selected.  The code will show the appropriate
      set of buttons. -->
    <string name="Select">Select</string>
    <string name="Close">Close</string>
    
    <tab_container
     follows="all"
     height="184"
     layout="topleft"
     left="7"
     name="ResidentChooserTabs"
     open_tabs_on_drag_and_drop="true"
     tab_height="25"
     tab_min_width="80"
     tab_position="top"
     top="0"
     right="-7">
        <panel
         border="none"
         height="150"
         label="SEARCH"
         layout="topleft"
         left="0"
         help_topic="avatarpicker"
         name="SearchPanel">
            <text
             type="string"
             length="1"
             follows="left|top"
             height="16"
             layout="topleft"
             left="2"
             name="InstructSearchResidentName"
             top="4"
             width="310">
                Enter part of a person&apos;s user or display name :
            </text>
            <line_editor
             bevel_style="none"
             border_style="line"
             border.border_thickness="0"
             commit_on_focus_lost="false"
             follows="left|top|right"
             height="23"
             left_delta="0"
             name="Edit"
             top_pad="0"
             right="-50" />
            <button
             follows="top|right"
             height="23"
             label="Go"
             label_selected="Go"
             layout="topleft"
             left_pad="5"
             name="Find"
             width="45" />
          <scroll_list
            draw_heading="true" 
           follows="all"
           height="106"
           layout="topleft"
           left="1"
           name="SearchResults"
           top_pad="2"
           right="-1">
            <columns
              label="Name"
              name="name" />
            <columns
              label="Username"
              name="username" />
          </scroll_list>
        </panel>
        <panel
         border="none"
         height="150"
         label="FRIENDS"
         layout="topleft"
         left="0"
         help_topic="avatarpicker"
         name="FriendsPanel">
            <text
             type="string"
             length="1"
             follows="left|top"
             height="16"
             layout="topleft"
             left="1"
             name="InstructSelectFriend"
             top_pad="4"
             width="300">
                Select a person:
            </text>
            <filter_editor
             follows="left|top|right"
             height="22"
             label="Filter Friends"
             layout="topleft"
             left="10"
             right="-10"
             name="filter_friends"
             search_button_visible="false"
             top_pad="3" />
            <scroll_list
             border="false"
             draw_heading="true" 
             follows="all"
             height="100"
             layout="topleft"
             left="1"
             name="Friends"
             top="52"
             right="-1">
              <columns
               label="Name"
               name="name"
               width="150" />
              <columns
               label="Username"
               name="username"
               width="150" />
            </scroll_list>
        </panel>

        <panel
         border="none"
         height="150"
         label="NEARBY"
         layout="topleft"
         left="6"
         help_topic="avatarpicker"
         name="NearMePanel"
         top="150"
         width="132">
            <text
             type="string"
             length="1"
             follows="left|top"
             height="16"
             layout="topleft"
             left="1"
             name="InstructSelectResident"
             top_pad="4"
             width="300">
                Select a person nearby:
            </text>
            <slider
             control_name="NearMeRange"
             decimal_digits="0"
             follows="left|top|right"
             height="20"
             increment="8"
             initial_value="32"
             label="Range"
             layout="topleft"
             left="10"
             max_val="512"
             min_val="8"
             name="near_me_range"
             top_pad="4"
             width="210" />
            <text
             type="string"
             length="1"
             follows="top|left"
             height="18"
             layout="topleft"
             left_pad="-4"
             name="meters"
             top_pad="-20"
             width="60">
                Meters
            </text>
            <button
             follows="top|right"
             layout="topleft"
             right="-5"
             top ="5"
             height="20"
             width="20"
             name="Refresh"
             image_overlay="Refresh_Off" />
          <scroll_list
             draw_heading="true"
             follows="all"
             height="106"
             border="false"
             layout="topleft"
             left="1"
             name="NearMe"
             sort_column="0"
             top_pad="20"
             right="-1">
            <columns
              label="Name"
              name="name" />
            <columns
              label="Username"
              name="username" />
          </scroll_list>
        </panel>
    </tab_container>


    <panel
     background_visible="false"
     follows="left|right|bottom"
     height="25"
     label="bottom_panel"
     layout="topleft"
     left="5"
     name="bottom_panel"
     top_pad="5" >
        <icon  
         follows="bottom|left"
         height="25"
         image_name="Toolbar_Left_Off"
         width="42"
         layout="topleft"
         left="0"
         name="spacer_icon_1"
         top="0" />

        <button
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="Permission_Visible_Online"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="OK"
         layout="topleft"
         left_pad="1"
         name="ok_btn"
         width="80" />


        <icon  
         follows="bottom|left"
         height="25"
         image_name="Toolbar_Middle_Off"
         width="20"
         layout="topleft"
         left_pad="1"
         name="spacer_icon_2"
         top="0" />


        <button
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="StopReload_Off"
         image_overlay_alignment="center"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         imgoverlay_label_align="true"
         imgoverlay_label_space="5"
         label="Cancel"
         layout="topleft"
         left_pad="1"
         name="cancel_btn"
         width="80" />

        <icon  
         follows="bottom|right|left"
         height="25"
         image_name="Toolbar_Right_Off"
         width="42"
         layout="topleft"
         left_pad="1"
         left="226"
         name="spacer_icon_3"
         top="0" />
    </panel>
</floater>
