<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_close="true"
 can_resize="false"
 height="390"
 layout="topleft"
 name="floater_parcel_info"
 positioning="cascading"
 save_rect="true"
 title=""
 width="300">
    <string name="title_parcel">Parcel Information</string>
    <string name="title_landmark">Landmark Information</string>

    <panel
     class="panel_parcel_info"
     filename="panel_parcel_info.xml"
     follows="all"
     height="350"
     layout="topleft"
     left="0"
     name="panel_parcel_info"
     top="5"
     width="300" />

    <!-- Parcel/landmark information -->
    <button
     follows="bottom|left"
     height="20"
     label="Teleport"
     layout="topleft"
     left="15"
     name="teleport_btn"
     tool_tip="Teleport to the selected area"
     top_pad="5"
     width="125" />
    <button
     follows="bottom|left"
     height="20"
     label="Show on Map"
     layout="topleft"
     left_pad="20"
     name="map_btn"
     tool_tip="Show the corresponding area on the World Map"
     top_delta="0"
     width="125" />

    <!-- Landmark editing -->
    <button
     follows="bottom|left"
     height="20"
     label="Save"
     layout="topleft"
     left="15"
     name="save_btn"
     tool_tip="Save changes and close"
     top_pad="-20"
     width="125" />
    <button
     follows="bottom|left"
     height="20"
     label="Discard"
     layout="topleft"
     left_pad="20"
     name="discard_btn"
     tool_tip="Delete the landmark from inventory"
     top_delta="0"
     width="125" />
</floater>
