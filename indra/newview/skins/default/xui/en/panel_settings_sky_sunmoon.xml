<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
        border="true"
        border_margin_horz="3"
        follows="all"
        height="320"
        label="Sun &amp; Moon"
        layout="topleft"
        left="0"
        name="panel_settings_sky_hbodies"
        top="0"
        width="505">
    <layout_stack 
            follows="all"
            layout="topleft"
            left="5"
            top="5"
            right="-5"
            bottom="-5"
            orientation="horizontal">
        <layout_panel
                border="false"
                bevel_style="in"
                auto_resize="true"
                user_resize="false"
                visible="true"
                name="sun_layout"
                height="400">
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="7"
                    top_pad="5"
                    font="SansSerifBold"
                    font.size="Large"
                    width="120">
                Sun
            </text>
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left="7"
                    top_delta="22"
                    width="100">
                Position:
            </text>
            <sun_moon_trackball
                    name="sun_rotation"
                    follows="left|top"
                    left_delta="0"
                    top_pad="5"
                    height="150"
                    width="150"
                    thumb_mode="sun" />
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="160"
                    top_delta="-15"
                    width="200">
                Image:
            </text>
            <texture_picker
                    height="87"
                    layout="topleft"
                    left_delta="0"
                    name="sun_image"
                    top_pad="5"
                    width="64"/>
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="0"
                    top_pad="-15"
                    width="64">
                Color:
            </text>
            <color_swatch
                    can_apply_immediately="true"
                    follows="left|top"
                    height="32"
                    label_height="0"
                    layout="topleft"
                    left_delta="0"
                    name="sun_moon_color"
                    top_pad="5"
                    width="64" />
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="-160"
                    top_pad="37"
                    width="80">
                Scale:
            </text>
            <slider
                    decimal_digits="2"
                    follows="top|left|right"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_delta="5"
                    min_val="0.25"
                    max_val="20"
                    name="sun_scale"
                    top_delta="15"
                    right="-15"
                    text_width="35"
                    can_edit_text="true"/>
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="-5"
                    top_pad="5"
                    width="200">
                Glow Focus:
            </text>
            <slider
                    decimal_digits="2"
                    follows="top|left|right"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_delta="5"
                    min_val="-2"
                    max_val="2"
                    name="glow_focus"
                    top_delta="15"
                    right="-15"
                    text_width="35"
                    can_edit_text="true"/>
            <text
                    follows="left|top"
                    height="10"
                    layout="topleft"
                    left_delta="-5"
                    top_pad="5"
                    width="200">
                Glow Size:
            </text>
            <slider
                    decimal_digits="2"
                    follows="top|left|right"
                    height="16"
                    increment="0.01"
                    initial_value="0"
                    layout="topleft"
                    left_delta="5"
                    min_val="0"
                    max_val="1.99"
                    name="glow_size"
                    top_delta="15"
                    right="-15"
                    text_width="35"
                    can_edit_text="true"/>
                    
            <check_box
                    control_name="sunbeacon"
                    width="60"
                    height="16"
                    label="Show Beacon"
                    layout="topleft"
                    name="sunbeacon" 
                    right="-50"
                    top="8"
                    follows="top|right"/>
                    
                    <view_border
                     top="1"
                     right="-1"
                     bottom="-1"
                     width="1"
                     follows="top|bottom|right"
                     bevel_style="none"
                     border_thickness="1"
                     mouse_opaque="false"
                     name="divisor1"/>
        </layout_panel>
                <layout_panel
                        border="false"
                        bevel_style="in"
                        auto_resize="true"
                        user_resize="false"
                        visible="true"
                        name="moon_layout"
                        height="220">
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="7"
                            top="5"
                            font="SansSerifBold"
                            font.size="Large"
                            width="280">
                        Moon &amp; Stars
                    </text>
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="7"
                            top_delta="22"
                            width="100">
                        Position:
                    </text>
                    <sun_moon_trackball
                            name="moon_rotation"
                            follows="left|top"
                            left_delta="0"
                            top_pad="5"
                            height="150"
                            width="150"
                            thumb_mode="moon" />
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="160"
                            top_delta="-15"
                            width="200">
                        Image:
                    </text>
                    <texture_picker
                            height="87"
                            layout="topleft"
                            left_delta="0"
                            name="moon_image"
                            top_pad="5"
                            width="64"/>
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left="7"
                            top_pad="70"
                            width="80">
                        Scale:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="top|left|right"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="0.25"
                            max_val="20"
                            name="moon_scale"
                            top_delta="15"
                            right="-15"
                            text_width="42"
                            can_edit_text="true"/>
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_delta="22"
                            width="200">
                        Brightness:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="top|left|right"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="0.0"
                            max_val="1.0"
                            name="moon_brightness"
                            top_delta="15"
                            right="-15"
                            text_width="42"
                            can_edit_text="true"/>
                    <text
                            follows="left|top"
                            height="10"
                            layout="topleft"
                            left_delta="-5"
                            top_delta="22"
                            width="200">
                        Star Brightness:
                    </text>
                    <slider
                            decimal_digits="2"
                            follows="top|left|right"
                            height="16"
                            increment="0.01"
                            initial_value="0"
                            layout="topleft"
                            left_delta="5"
                            min_val="0"
                            max_val="500"
                            name="star_brightness"
                            top_pad="5"
                            right="-15"
                            text_width="42"
                            can_edit_text="true"/>
                <check_box
                        control_name="moonbeacon"
                        width="60"
                        height="16"
                        label="Show Beacon"
                        layout="topleft"
                        name="moonbeacon" 
                        right="-50"
                        top="8"
                        follows="top|right"/>
                            
        </layout_panel>
    </layout_stack>
</panel>                
