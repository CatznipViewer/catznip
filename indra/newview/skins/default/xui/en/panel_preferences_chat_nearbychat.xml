    <button
      image_overlay="Audio_Off"
      image_overlay_alignment="left"
      follows="top|left"
      height="23"
      layout="topleft"
      left_pad="15"
      name="soundscheme_apply"
      label="Sound Alerts"
      top_delta="-1"
      right="-15"
      width="120">
      <button.commit_callback
        function="Pref.ShowPanel"
        parameter="soundalerts" />
      </button>

</panel>
