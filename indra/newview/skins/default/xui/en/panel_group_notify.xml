<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_visible="true"
 height="90"
 label="instant_message"
 layout="topleft"
 left="0"
 name="panel_group_notify"
 top="0"
 width="305">
    <string
     name="message_max_lines_count"
     value="10" />
    <string
     name="subject_font"
     value="SANSSERIF_BIG" />
    <string
     name="date_font"
     value="SANSSERIF_SMALL" />
    <panel
     background_visible="true"
     follows="top"
     height="45"
     label="header"
     layout="topleft"
     left="0"
     name="header"
     top="0"
     width="305">
        <group_icon
         follows="all"
         height="32"
         layout="topleft"
         left="8"
         mouse_opaque="true"
         name="group_icon"
         top="5"
         width="32" />
        <text
         follows="all"
         font="SansSerifLarge"
         height="20"
         layout="topleft"
         left_pad="5"
         name="title"
         plain_text="true"
         text_color="GroupNotifyTextColor"
         top="5"
         use_ellipses="true"
         value="[GROUP]"
         width="230" />
        <text
         follows="all"
         font="SansSerifSmall"
         height="15"
         layout="topleft"
         left="45"
         name="sender"
         plain_text="true"
         text_color="GroupNotifyTextColor"
         top_pad="-2"
         use_ellipses="true"
         value="[SENDER]"
         width="230" />
    </panel>
    <text_editor
     parse_urls="true"
     enabled="true"
     follows="all"
     height="0"
     layout="topleft"
     left="10"
     max_length="2147483647"
     name="message"
     parse_highlights="true"
     read_only="true"
     text_color="GroupNotifyTextColor"
     top="40"
     type="string"
     use_ellipses="true"
     value="message"
     width="285"
	 word_wrap="true" >
    </text_editor>
    <icon
     bottom="60"
     follows="left|bottom|right"
     height="15"
     layout="topleft"
     left="10"
     mouse_opaque="true"
     name="attachment_icon"
     width="15" />
    <text
     bottom="60"
     follows="left|bottom|right"
     font="SansSerif"
     height="15"
     layout="topleft"
     left="30"
     name="attachment"
     parse_urls="false"
     text_color="GroupNotifyTextColor"
     value="Attachment"
     use_ellipses="true"
     width="250" />
    <button
     bottom="85"
     follows="bottom"
     height="20"
     label="OK"
     layout="topleft"
     right="-10"
     name="btn_ok"
     width="70" />
</panel>
