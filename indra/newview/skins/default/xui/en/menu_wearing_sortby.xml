<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu
 layout="topleft"
 visible="false"
 name="Sort By Wearing">
    <menu_item_check
     label="Appearance"
     name="sort_name">
        <menu_item_check.on_click
         function="Gear.Sort"
         parameter="appearance" />
        <menu_item_check.on_check
         function="Gear.CheckSort"
         parameter="appearance" />
    </menu_item_check>
    <menu_item_check
     label="Name"
     name="sort_name">
        <menu_item_check.on_click
         function="Gear.Sort"
         parameter="name" />
        <menu_item_check.on_check
         function="Gear.CheckSort"
         parameter="name" />
    </menu_item_check>
    <menu_item_check
     label="Type"
     name="sort_type">
        <menu_item_check.on_click
         function="Gear.Sort"
         parameter="type_name" />
        <menu_item_check.on_check
         function="Gear.CheckSort"
         parameter="type_name" />
    </menu_item_check>
</toggleable_menu>
