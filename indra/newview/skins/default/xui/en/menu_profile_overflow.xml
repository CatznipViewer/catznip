<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<toggleable_menu
 layout="topleft"
 name="profile_overflow_menu">
    <menu_item_call
     label="Add Friend"
     layout="topleft"
     name="add_friend">
        <menu_item_call.on_click
         function="Profile.AddFriend" />
        <menu_item_call.on_visible
         function="Profile.EnableAddFriend" />
    </menu_item_call>
    <menu_item_call
     label="Remove Friend"
     layout="topleft"
     name="remove_friend">
        <menu_item_call.on_click
         function="Profile.RemoveFriend" />
        <menu_item_call.on_visible
         function="Profile.EnableRemoveFriend" />
    </menu_item_call>
    <menu_item_call
     label="Show on Map"
     layout="topleft"
     name="show_on_map">
        <menu_item_call.on_click
         function="Profile.ShowOnMap" />
        <menu_item_call.on_enable
         function="Profile.EnableShowOnMap" />
    </menu_item_call>
    <menu_item_call
     label="Share"
     layout="topleft"
     name="share">
        <menu_item_call.on_click
         function="Profile.Share" />
    </menu_item_call>
    <menu_item_call
     label="Block"
     layout="topleft"
     name="block">
        <menu_item_call.on_click
         function="Profile.BlockUnblock"/>
        <menu_item_call.on_visible
         function="Profile.EnableBlock" />
    </menu_item_call>
    <menu_item_call
     label="Unblock"
     layout="topleft"
     name="unblock">
        <menu_item_call.on_click
         function="Profile.BlockUnblock"/>
        <menu_item_call.on_visible
         function="Profile.EnableUnblock" />
    </menu_item_call>
</toggleable_menu>
