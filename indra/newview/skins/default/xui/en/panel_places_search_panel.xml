<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="400"
 label="Search"
 layout="topleft"
 name="panel_places_search"
 width="313">
    <panel
     class="panel_places_search"
     follows="all"
     height="373"
     layout="topleft"
     left="0"
     name="search_panel"
     top="0"
     width="313">
        <panel.string
         name="not_found">
            No results for &apos;[TEXT]&apos;
        </panel.string>
        <panel.string
         name="no_results">
            No results
        </panel.string>
        <panel.string
         name="searching">
            Searching...
        </panel.string>
        <panel.string
         name="all_categories">
            All Categories
        </panel.string>
        <layout_stack
         animate="false"
         border_size="0"
         follows="all"
         height="373"
         layout="topleft"
         left="0"
         name="search_stack"
         orientation="vertical"
         top="0"
         width="313">
            <layout_panel
             auto_resize="false"
             height="65"
             layout="topleft"
             name="search_options_panel"
             visibility_control="PlacesSearchShowOptions"
             width="313">
                <text
                 follows="top|left"
                 halign="right"
                 height="16"
                 layout="topleft"
                 left="30"
                 name="search_category_label"
                 top="10"
                 value="Category : "
                 width="70" />
                <combo_box
                 follows="top|left"
                 height="23"
                 layout="topleft"
                 left_pad="10"
                 name="search_category"
                 top_delta="-4"
                 width="160" />
                <text
                 follows="top|left"
                 halign="right"
                 height="16"
                 layout="topleft"
                 left="30"
                 name="search_maturity_label"
                 top_pad="8"
                 value="Maturity: "
                 width="70" />
                <check_box
                 height="16"
                 label=""
                 layout="topleft"
                 left_pad="10"
                 name="search_pg_check"
                 top_delta="0"
                 value="1"
                 width="16" />
                <icon
                 follows="top|left"
                 height="16"
                 image_name="Parcel_PG_Dark"
                 layout="topleft"
                 left_pad="5"
                 name="search_pg_icon"
                 top_delta="-1"
                 width="18" />
                <check_box
                 height="16"
                 label=""
                 layout="topleft"
                 left_pad="20"
                 name="search_mature_check"
                 top_delta="1"
                 value="1"
                 width="16" />
                <icon
                 follows="top|left"
                 height="16"
                 image_name="Parcel_M_Dark"
                 layout="topleft"
                 left_pad="5"
                 name="search_mature_icon"
                 top_delta="-1"
                 width="18" />
                <check_box
                 height="16"
                 label=""
                 layout="topleft"
                 left_pad="20"
                 name="search_adult_check"
                 top_delta="1"
                 value="1"
                 width="16" />
                <icon
                 follows="top|left"
                 height="16"
                 image_name="Parcel_R_Dark"
                 layout="topleft"
                 left_pad="5"
                 name="search_adult_icon"
                 top_delta="-1"
                 width="18" />
                <view_border 
                 bevel_style="in"
                 follows="left|top|right" 
                 height="1"
                 left="5"
                 layout="topleft"
                 name="border"
                 right="-5"
                 top_pad="7"
                 />
            </layout_panel>
            <layout_panel
             auto_resize="false"
             height="148"
             layout="topleft"
             name="search_info_panel"
             visible="true"
             width="313">
                <!-- This needs to match panel_parcel_info.xml -->
                <panel
                 class="panel_parcel_info"
                 follows="all"
                 height="148"
                 layout="topleft"
                 left="0"
                 name="search_parcel"
                 top="0"
                 visible="false"
                 width="313">
                    <!-- Parcel numbers text -->
                    <string
                     name="area_traffic_text">
                        Area: [AREA]m² - Traffic: [TRAFFIC]
                    </string>
                    <string
                     name="area_sale_text">
                        Area: [AREA]m² - For sale: [PRICE]
                    </string>

	                <!-- Currently set to 4:3 -->
                    <texture_picker
                     enabled="false"
                     fallback_image="default_land_picture.j2c"
                     follows="top|left"
                     height="60"
                     layout="topleft"
                     left="10"
                     name="parcel_snapshot"
	                 show_label="false"
                     top="5"
                     width="80" />
                    <text
                     follows="top|left|right"
                     font="SansSerifLarge"
                     height="14"
                     layout="topleft"
                     left_pad="10"
                     name="parcel_name"
                     right="-10"
                     text_color="white"
                     top_delta="3"
                     use_ellipses="true"
                     value="Parcel name goes here"  />
                    <icon
                     follows="top|left"
                     height="16"
                     image_name="transparent.j2c"
                     layout="topleft"
                     left_delta="0"
                     name="region_maturity"
                     top_pad="4"
                     width="18" />
                    <text
                     follows="top|left|right"
                     height="14"
                     layout="topleft"
                     left_pad="5"
                     name="parcel_location"
                     right="-10"
                     top_delta="3"
                     use_ellipses="true"
                     value="Region (128, 128, 20)" />
                    <text
                     follows="top|left|right"
                     height="15"
                     layout="topleft"
                     left="100"
                     name="parcel_numbers"
                     right="-10"
                     top_pad="4"
                     value="Area: 4096m² - For sale: L$5,000,000" />
                    <text_editor
                     bg_readonly_color="Transparent"
                     enabled="false" 
                     follows="all"
                     height="75"
                     max_length="65536"
                     left="10"
                     text_color="LtGray"
                     name="parcel_description"
                     right="-10"
                     top="70"
                     word_wrap="true" />
                </panel>
            </layout_panel>
            <layout_panel
             auto_resize="auto"
             height="160"
             layout="topleft"
             name="search_list_panel"
             width="313">
                <scroll_list
                 draw_heading="true" 
                 follows="all"
                 height="160"
                 layout="topleft"
                 left="0"
                 name="search_results"
                 top_pad="0"
                 width="313">
                  <columns
                   label="Name"
                   name="name" />
                  <columns
                   label="Traffic"
                   name="traffic"
                   width="50" />
                </scroll_list>
            </layout_panel>
        </layout_stack>
    </panel>
 
    <panel
     background_visible="true"
     follows="left|right|bottom"
     height="27"
     label="bottom_panel"
     layout="topleft"
     left="0"
     name="bottom_panel"
     top_pad="0"
     width="313">
        <menu_button
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Left_Over"
         image_overlay="OptionsMenu_Off"
         image_selected="Toolbar_Left_Selected"
         image_unselected="Toolbar_Left_Off"
         layout="topleft"
         left="0"
         name="gear_btn"
         tool_tip="Options"
         top="1"
         width="31" />
        <button
         control_name="PlacesSearchShowOptions"
         follows="bottom|left"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="Search_Icon"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         layout="topleft"
         left_pad="1"
         name="options_btn"
         toggle="true"
         width="31" />
        <icon
         follows="bottom|left|right"
         height="25"
         image_name="Toolbar_Middle_Off"
         layout="topleft"
         left_pad="1"
         name="dummy_icon_1"
         width="17" />
        <button
         follows="bottom|right"
         height="25"
         image_hover_unselected="Toolbar_Middle_Over"
         image_overlay="Arrow_Small_Left"
         image_overlay_alignment="left"
         image_selected="Toolbar_Middle_Selected"
         image_unselected="Toolbar_Middle_Off"
         label="Previous"
         layout="topleft"
         left_pad="1"
         name="prev_btn"
         width="75" />
        <icon
         follows="bottom|right"
         height="25"
         image_name="Toolbar_Middle_Off"
         layout="topleft"
         left_pad="1"
         name="dummy_icon_2"
         width="80" />
        <text
         follows="bottom|right"
         halign="center"
         height="24"
         layout="topleft"
         name="results_label"
         top_delta="-1"
         valign="center"
         value="No results"
         width="80" />
        <button
         follows="bottom|right"
         height="25"
         image_hover_unselected="Toolbar_Right_Over"
         image_overlay="Arrow_Small_Right"
         image_overlay_alignment="right"
         image_selected="Toolbar_Right_Selected"
         image_unselected="Toolbar_Right_Off"
         label="Next"
         layout="topleft"
         left_pad="1"
         name="next_btn"
         top_delta="1"
         width="75" />
    </panel>

</panel>
